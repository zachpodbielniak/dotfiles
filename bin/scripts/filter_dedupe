set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Remove duplicate lines while preserving order

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Removes duplicate lines from input while preserving the original order.
    Unlike 'sort -u', this keeps lines in their original sequence.

OPTIONS:
    -h, --help      Show this help message and exit
    -i, --ignore-case   Ignore case when comparing lines
    --license       Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Remove duplicates from stdin
    echo -e "apple\\nbanana\\napple\\ncherry" | ${SCRIPT_NAME}

    # Use in neovim (visual selection -> filter)
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local ignore_case=0
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -i|--ignore-case)
                ignore_case=1
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local input
    if [[ -n "${file_path}" ]]; then
        input=$(cat "${file_path}")
    else
        input=$(cat)
    fi

    if [[ ${ignore_case} -eq 1 ]]; then
        echo "${input}" | awk 'BEGIN{IGNORECASE=1} !seen[$0]++'
    else
        echo "${input}" | awk '!seen[$0]++'
    fi
}

main "$@"
