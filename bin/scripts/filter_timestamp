set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Convert Unix timestamps to readable dates (and vice versa)

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Converts Unix timestamps (seconds or milliseconds since epoch) to
    human-readable dates. Can also convert dates back to timestamps.

OPTIONS:
    -h, --help          Show this help message and exit
    -r, --reverse       Convert dates to timestamps instead
    -f, --format FMT    Output format (default: '%Y-%m-%d %H:%M:%S')
    -u, --utc           Use UTC instead of local timezone
    --license           Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Convert timestamp to date
    echo "1704067200" | ${SCRIPT_NAME}
    # Output: 2024-01-01 00:00:00

    # Convert millisecond timestamp
    echo "1704067200000" | ${SCRIPT_NAME}

    # Convert date to timestamp
    echo "2024-01-01 00:00:00" | ${SCRIPT_NAME} -r

    # Custom format
    echo "1704067200" | ${SCRIPT_NAME} -f '%B %d, %Y'

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local reverse=0
    local format='%Y-%m-%d %H:%M:%S'
    local utc=0
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -r|--reverse)
                reverse=1
                ;;
            -f|--format)
                format="${2}"
                shift
                ;;
            -u|--utc)
                utc=1
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local content
    if [[ -n "${file_path}" ]]; then
        content=$(cat "${file_path}")
    else
        content=$(cat)
    fi

    local date_cmd="date"
    if [[ ${utc} -eq 1 ]]; then
        date_cmd="date -u"
    fi

    while IFS= read -r line; do
        if [[ "${line}" =~ ^[[:space:]]*$ ]]; then
            echo "${line}"
            continue
        fi

        if [[ ${reverse} -eq 1 ]]; then
            # Convert date to timestamp
            local ts
            ts=$(${date_cmd} -d "${line}" +%s 2>/dev/null || echo "${line}")
            echo "${ts}"
        else
            # Convert timestamp to date
            local ts="${line}"
            # Check if milliseconds (13+ digits)
            if [[ "${ts}" =~ ^[0-9]{13,}$ ]]; then
                ts=$((ts / 1000))
            fi
            if [[ "${ts}" =~ ^[0-9]+$ ]]; then
                ${date_cmd} -d "@${ts}" +"${format}" 2>/dev/null || echo "${line}"
            else
                echo "${line}"
            fi
        fi
    done <<< "${content}"
}

main "$@"
