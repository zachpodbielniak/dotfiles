set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Align text columns

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Aligns text into columns. By default uses whitespace as delimiter.
    Useful for aligning variable assignments, table data, etc.

OPTIONS:
    -h, --help          Show this help message and exit
    -d, --delimiter D   Use D as the column delimiter (default: whitespace)
    -s, --separator S   Use S as output separator (default: 2 spaces)
    --license           Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Align whitespace-separated columns
    echo -e "name age\\njohn 25\\njane 30" | ${SCRIPT_NAME}

    # Align on equals sign (for variable assignments)
    echo -e "foo=1\\nbar_long=2\\nx=3" | ${SCRIPT_NAME} -d '='

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local delimiter=""
    local separator="  "
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -d|--delimiter)
                delimiter="${2}"
                shift
                ;;
            -s|--separator)
                separator="${2}"
                shift
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local input
    if [[ -n "${file_path}" ]]; then
        input=$(cat "${file_path}")
    else
        input=$(cat)
    fi

    if [[ -n "${delimiter}" ]]; then
        echo "${input}" | column -t -s "${delimiter}" -o "${separator}"
    else
        echo "${input}" | column -t -o "${separator}"
    fi
}

main "$@"
