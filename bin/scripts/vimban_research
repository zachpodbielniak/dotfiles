# vimban_research - Quick research ticket creation with sensible defaults
#
# Usage:
#   vimban_research "Research title"
#   vimban_research "Research title" -p high
#   vimban_research "Research title" --due +14d
#   vimban_research --work "Work research"
#
# Defaults:
#   assignee: zach_podbielniak
#   reporter: zach_podbielniak
#   due_date: +7d (1 week from now)
#   priority: medium

set -euo pipefail

show_help () {
    cat <<EOF
vimban_research - Quick research ticket creation with sensible defaults

Usage:
    vimban_research [options] "Research title"
    vimban_research "Research title" [vimban options]

Defaults:
    assignee: zach_podbielniak
    reporter: zach_podbielniak
    due_date: +7d (1 week from now)
    priority: medium

Options:
    -h, --help          Show this help message
    -p, --priority PRI  Override priority (critical|high|medium|low)
    --due DATE          Override due date (+Nd, YYYY-MM-DD, etc.)
    -a, --assignee REF  Override assignee
    -r, --reporter REF  Override reporter
    --work              Create in work scope
    --personal          Create in personal scope

Any additional options are passed through to vimban create research.

Examples:
    vimban_research "Investigate caching options"
    vimban_research "Evaluate new frameworks" -p high --due +14d
    vimban_research --work "Research competitor APIs"
    vimban_research --personal "Compare solar panel options" -p low
EOF
}

# Default values
assignee="zach_podbielniak"
reporter="zach_podbielniak"
due_date="+7d"
priority="medium"

# Passthrough args (scope flags, title, other options)
passthrough_args=()

# Parse arguments
while [[ $# -gt 0 ]]
do
    case "${1}" in
        -h|--help)
            show_help
            exit 0
            ;;
        -p|--priority)
            priority="${2}"
            shift 2
            ;;
        --due)
            due_date="${2}"
            shift 2
            ;;
        -a|--assignee)
            assignee="${2}"
            shift 2
            ;;
        -r|--reporter)
            reporter="${2}"
            shift 2
            ;;
        *)
            passthrough_args+=("${1}")
            shift
            ;;
    esac
done

# Check if we have at least a title in passthrough args
if [[ ${#passthrough_args[@]} -lt 1 ]]
then
    echo "Error: Research title required" >&2
    echo "Usage: vimban_research [options] \"Research title\"" >&2
    exit 1
fi

# Build and execute the command
exec vimban create research \
    -a "${assignee}" \
    -r "${reporter}" \
    --due "${due_date}" \
    -p "${priority}" \
    "${passthrough_args[@]}"
