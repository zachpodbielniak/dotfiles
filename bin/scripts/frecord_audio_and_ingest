# get input with fzf
input="$(sbi -f -l 2>&1 | grep -vP "\ " | fzf)"
if [[ $? -ne 0 ]]
then
    echo "exit early"
    exit 0
fi

# List of possible prefixes (para)
prefixes="00_inbox 01_projects 02_areas 03_resources 04_archives"

for p in ${prefixes}; do
    if [[ ${input} == "$p/"* ]]; then
        prefix="$p/"
        remainder="${input#$prefix}"
        break
    fi
done

category="${remainder}"

# call out to main script
if [[ -z ${category} ]]
then 
    # cut as needed
    para="${prefix:3:-1}"
    sbi --para ${para} ${@}
    record_audio_and_ingest --para ${para} ${@}
else
    # cut as needed
    para="${prefix:3:-2}"
    record_audio_and_ingest --para ${para} --category ${category} ${@}
fi
