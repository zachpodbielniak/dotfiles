"""Calculate percentile from stdin numbers."""

import sys
import argparse
import statistics


def main() -> int:
	parser = argparse.ArgumentParser(description="Calculate percentile from stdin numbers")
	parser.add_argument(
		"percentiles",
		help="Percentile(s) to calculate (e.g., 95 or 25,50,75,95)"
	)
	args = parser.parse_args()

	# Read all numbers from stdin
	numbers = []
	for line in sys.stdin:
		try:
			numbers.append(float(line.strip()))
		except ValueError:
			continue

	if not numbers:
		return 1

	# Parse percentiles
	percentile_values = [float(p.strip()) for p in args.percentiles.split(",")]

	numbers.sort()

	for p in percentile_values:
		# Linear interpolation percentile calculation
		if p < 0 or p > 100:
			print(f"Error: percentile {p} out of range [0, 100]", file=sys.stderr)
			continue

		if p == 0:
			print(numbers[0])
		elif p == 100:
			print(numbers[-1])
		else:
			# Linear interpolation method
			k = (len(numbers) - 1) * p / 100
			f = int(k)
			c = k - f

			if f + 1 < len(numbers):
				value = numbers[f] * (1 - c) + numbers[f + 1] * c
			else:
				value = numbers[f]

			# Check if result is integer
			if value == int(value):
				print(int(value))
			else:
				print(value)

	return 0


if __name__ == "__main__":
	sys.exit(main())
