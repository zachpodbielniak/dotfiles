set -euo pipefail

usage () {
	cat << 'EOF'
set_diff - Lines in first input but NOT in second

USAGE:
	set_diff [OPTIONS] FILE1 FILE2
	set_diff [OPTIONS] - FILE2  (read first input from stdin)

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	-i, --ignore-case Case-insensitive comparison

EXAMPLES:
	set_diff file1.txt file2.txt
	cat file1.txt | set_diff - file2.txt

DESCRIPTION:
	Output lines that appear in the first input but NOT
	in the second input. Preserves order from first input.

EOF
}

if [[ $# -lt 2 ]]; then
	usage >&2
	exit 1
fi

ignore_case=false
file1=""
file2=""

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-i|--ignore-case)
			ignore_case=true
			shift
			;;
		-)
			if [[ -z "$file1" ]]; then
				file1="$1"
			else
				file2="$1"
			fi
			shift
			;;
		-*)
			echo "set_diff: unknown option: $1" >&2
			exit 1
			;;
		*)
			if [[ -z "$file1" ]]; then
				file1="$1"
			else
				file2="$1"
			fi
			shift
			;;
	esac
done

if [[ -z "$file1" ]] || [[ -z "$file2" ]]; then
	echo "set_diff: two files required" >&2
	exit 1
fi

# Use grep to find lines in first but not in second
if [[ "$ignore_case" == "true" ]]; then
	while IFS= read -r line || [[ -n "$line" ]]; do
		[[ -z "$line" ]] && continue
		if ! grep -qi "^${line}$" "$file2"; then
			echo "$line"
		fi
	done < "$file1"
else
	while IFS= read -r line || [[ -n "$line" ]]; do
		[[ -z "$line" ]] && continue
		if ! grep -q "^${line}$" "$file2"; then
			echo "$line"
		fi
	done < "$file1"
fi
