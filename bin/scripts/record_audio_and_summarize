#!/bin/bash 
# strips audio from a video and transcodes to 
# oggvorbis format for standard formatting.
# after stripping, it transcribes the audio 
# to get a text output of the audio, then it
# sends that to an ai summarizer to get the
# a summary im markdown. lastly, it takes 
# the markdown copy and puts it on the
# system clipboard

filename=""

if [[ $# -ge 1 ]]
then
    filename="${1}"
else 
    filename="${HOME}/Documents/recordings/$(date +'%Y-%m-%d_%H-%M-%S').ogg"
fi

# record the audio
record_audio "${filename}"

# post processing with whisper-cpp
# txt output is stored at ${filename}.txt
transcribe_audio "${filename}"

# after done transcribing, lets summarize it as markdown
ai_summary_as_markdown < "${filename}.txt" > "${filename}.md"

# place neorg copy on the clipboard
wl-copy <(mton < "${filename}.md")

printf \
    "%s\n%s\n%s\n%s\n" \
    "audio file: ${filename}" \
    "transcription: ${filename}.txt" \
    "summary: ${filename}.md" \
    "clipboard: summary in neorg"

