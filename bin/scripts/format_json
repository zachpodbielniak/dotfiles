set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Format/pretty-print JSON

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Pretty-prints JSON using jq. Can also compact JSON or apply jq filters.

OPTIONS:
    -h, --help          Show this help message and exit
    -c, --compact       Output compact JSON (one line)
    -s, --sort-keys     Sort object keys
    -f, --filter F      Apply jq filter F (default: '.')
    --license           Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Pretty-print JSON
    echo '{"a":1,"b":2}' | ${SCRIPT_NAME}

    # Compact JSON
    ${SCRIPT_NAME} -c file.json

    # Sort keys
    echo '{"z":1,"a":2}' | ${SCRIPT_NAME} -s

    # Apply filter
    echo '{"items":[1,2,3]}' | ${SCRIPT_NAME} -f '.items[]'

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local compact=0
    local sort_keys=0
    local filter="."
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -c|--compact)
                compact=1
                ;;
            -s|--sort-keys)
                sort_keys=1
                ;;
            -f|--filter)
                filter="${2}"
                shift
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local jq_opts=()
    if [[ ${compact} -eq 1 ]]; then
        jq_opts+=("-c")
    fi
    if [[ ${sort_keys} -eq 1 ]]; then
        jq_opts+=("-S")
    fi

    if [[ -n "${file_path}" ]]; then
        jq "${jq_opts[@]}" "${filter}" "${file_path}"
    else
        jq "${jq_opts[@]}" "${filter}"
    fi
}

main "$@"
