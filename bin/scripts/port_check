set -euo pipefail

usage () {
	cat << 'EOF'
port_check - Check if port(s) are open

USAGE:
	port_check [OPTIONS] HOST PORT [PORT ...]

OPTIONS:
	-h, --help       Show this help message
	--license        Show license information
	-t, --timeout N  Connection timeout (default: 1)
	--any            Exit 0 if ANY port is open
	--quiet          No output, just exit code

EXAMPLES:
	port_check localhost 22
	port_check localhost 80 443
	port_check --any localhost 8080 9000

DESCRIPTION:
	Check if port(s) on a host are open.
	Exit 0 if all ports open (or any if --any flag).
	Exit 1 if any port closed.

EOF
}

if [[ $# -lt 2 ]]; then
	usage >&2
	exit 1
fi

timeout=1
check_any=false
quiet=false
host="${1}"
shift

ports=()
while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-t|--timeout)
			timeout="$2"
			shift 2
			;;
		--any)
			check_any=true
			shift
			;;
		--quiet)
			quiet=true
			shift
			;;
		*)
			ports+=("$1")
			shift
			;;
	esac
done

if [[ ${#ports[@]} -eq 0 ]]; then
	echo "port_check: at least one port required" >&2
	exit 1
fi

# Check ports
any_open=false
all_open=true

for port in "${ports[@]}"; do
	if nc -z -w "$timeout" "$host" "$port" &>/dev/null; then
		any_open=true
		[[ "$quiet" != "true" ]] && echo "$host:$port open"
	else
		all_open=false
		[[ "$quiet" != "true" ]] && echo "$host:$port closed"
	fi
done

# Determine exit code
if [[ "$check_any" == "true" ]]; then
	[[ "$any_open" == "true" ]] && exit 0 || exit 1
else
	[[ "$all_open" == "true" ]] && exit 0 || exit 1
fi
