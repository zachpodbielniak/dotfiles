"""Convert text to URL/filename-safe slug."""

import sys
import argparse
import unicodedata
import re


def slugify(
	text: str,
	separator: str = "-",
	max_length: int | None = None,
	preserve_case: bool = False
) -> str:
	"""Convert text to slug format."""
	# Normalize unicode (decompose accented characters)
	text = unicodedata.normalize("NFKD", text)
	text = text.encode("ascii", "ignore").decode("ascii")

	# Convert to lowercase unless preserve_case is set
	if not preserve_case:
		text = text.lower()

	# Replace non-alphanumeric characters with separator
	text = re.sub(r"[^a-zA-Z0-9]+", separator, text)

	# Remove leading/trailing separators
	text = text.strip(separator)

	# Collapse multiple separators
	text = re.sub(f"{re.escape(separator)}+", separator, text)

	# Truncate if needed
	if max_length:
		text = text[:max_length].rstrip(separator)

	return text


def main() -> int:
	parser = argparse.ArgumentParser(
		description="Convert text to URL/filename-safe slug"
	)
	parser.add_argument(
		"--separator",
		default="-",
		help="Custom separator (default: -)"
	)
	parser.add_argument(
		"--max-length",
		type=int,
		help="Truncate to N characters"
	)
	parser.add_argument(
		"--preserve-case",
		action="store_true",
		help="Don't lowercase"
	)

	args = parser.parse_args()

	for line in sys.stdin:
		line = line.rstrip("\n")
		result = slugify(
			line,
			separator=args.separator,
			max_length=args.max_length,
			preserve_case=args.preserve_case
		)
		print(result)

	return 0


if __name__ == "__main__":
	sys.exit(main())
