set -euo pipefail

usage () {
	cat << 'EOF'
normalize_path - Normalize file paths (resolve .. and remove duplicates)

USAGE:
normalize_path [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information
-a              Canonicalize absolute path

EXAMPLES:
echo "/usr/bin/../lib" | normalize_path
# Output: /usr/lib

echo "./dir/./subdir" | normalize_path
# Output: dir/subdir

EOF
}

absolute=0

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	-a) absolute=1 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Normalize paths
while IFS= read -r path; do
	if [[ $absolute -eq 1 ]]; then
		# Resolve to absolute path
		python3 -c "import os; print(os.path.normpath(os.path.abspath('${path}')))"
	else
		# Just normalize without resolving to absolute
		python3 -c "import os; print(os.path.normpath('${path}'))"
	fi
done
