set -euo pipefail

usage () {
	cat << 'EOF'
set_union - Combine unique lines from multiple inputs

USAGE:
	set_union [OPTIONS] FILE1 [FILE2 ...]
	set_union [OPTIONS] - FILE2  (read first input from stdin)

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	-i, --ignore-case Case-insensitive comparison

EXAMPLES:
	set_union file1.txt file2.txt
	cat file1.txt | set_union - file2.txt
	set_union -i file1.txt file2.txt

DESCRIPTION:
	Output unique lines from all input files, preserving order
	of first occurrence. Similar to combining sorted -u output
	but maintains the order from the first input.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

ignore_case=false
files=()

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-i|--ignore-case)
			ignore_case=true
			shift
			;;
		-)
			files+=("$1")
			shift
			;;
		-*)
			echo "set_union: unknown option: $1" >&2
			exit 1
			;;
		*)
			files+=("$1")
			shift
			;;
	esac
done

if [[ ${#files[@]} -lt 1 ]]; then
	echo "set_union: at least one file required" >&2
	exit 1
fi

# Use awk to track seen lines while preserving order
if [[ "$ignore_case" == "true" ]]; then
	cat "${files[@]}" | awk '
		{
			lower = tolower($0)
			if (!(lower in seen)) {
				seen[lower] = 1
				print $0
			}
		}
	'
else
	cat "${files[@]}" | awk '
		{
			if (!($0 in seen)) {
				seen[$0] = 1
				print $0
			}
		}
	'
fi
