set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Evaluate math expressions inline

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Evaluates mathematical expressions in the input. By default, appends
    results after '=' signs or replaces expressions entirely.

    Supports: +, -, *, /, %, ^, (), sqrt(), sin(), cos(), etc. via bc.

OPTIONS:
    -h, --help          Show this help message and exit
    -r, --replace       Replace expressions with results (instead of append)
    -p, --precision N   Decimal precision (default: 2)
    --license           Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Calculate inline (appends result)
    echo "2 + 2 =" | ${SCRIPT_NAME}
    # Output: 2 + 2 = 4

    # Replace mode
    echo "Price: (100 * 1.08)" | ${SCRIPT_NAME} -r
    # Output: Price: 108.00

    # Just evaluate an expression
    echo "sqrt(144) + 5^2" | ${SCRIPT_NAME}

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local replace=0
    local precision=2
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -r|--replace)
                replace=1
                ;;
            -p|--precision)
                precision="${2}"
                shift
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local content
    if [[ -n "${file_path}" ]]; then
        content=$(cat "${file_path}")
    else
        content=$(cat)
    fi

    while IFS= read -r line; do
        if [[ "${line}" =~ ^[[:space:]]*$ ]]; then
            echo "${line}"
            continue
        fi

        # Check if line ends with = (append result)
        if [[ "${line}" =~ =$ ]] || [[ "${line}" =~ =[[:space:]]*$ ]]; then
            local expr="${line%=*}"
            expr="${expr## }"
            expr="${expr%% }"
            # Extract just the math part (last expression-like segment)
            local result
            result=$(echo "scale=${precision}; ${expr}" | bc -l 2>/dev/null || echo "ERR")
            echo "${line} ${result}"
        # Check for expressions in parentheses to replace
        elif [[ ${replace} -eq 1 ]] && [[ "${line}" =~ \(([0-9+\-*/^.[:space:]]+)\) ]]; then
            local newline="${line}"
            # Replace all (math expr) with results
            while [[ "${newline}" =~ \(([0-9+\-*/^.[:space:]]+)\) ]]; do
                local expr="${BASH_REMATCH[1]}"
                local full="${BASH_REMATCH[0]}"
                local result
                result=$(echo "scale=${precision}; ${expr}" | bc -l 2>/dev/null || echo "ERR")
                newline="${newline/"${full}"/${result}}"
            done
            echo "${newline}"
        # Try to evaluate the whole line as an expression
        elif [[ "${line}" =~ ^[0-9+\-*/^.()[:space:]]+$ ]]; then
            local result
            result=$(echo "scale=${precision}; ${line}" | bc -l 2>/dev/null || echo "${line}")
            echo "${result}"
        else
            echo "${line}"
        fi
    done <<< "${content}"
}

main "$@"
