            "max_output_tokens": 4096,
            "description": "Fast Grok 3 model with 1M context window"
        },
        "grok-3-mini-beta": {
            "context_tokens": 1_000_000,
            "max_output_tokens": 4096,
            "description": "Compact Grok 3 model with 1M context window"
        },
        "grok-3-mini-fast-beta": {
            "context_tokens": 1_000_000,
            "max_output_tokens": 4096,
            "description": "Fast compact Grok 3 model with 1M context window"
        },
        # Grok 2 models - ~131K context window
        "grok-2-1212": {
            "context_tokens": 131_072,
            "max_output_tokens": 4096,
            "description": "Grok 2 model (December 2024) with 131K context"
        },
        "grok-2-vision-1212": {
            "context_tokens": 131_072,
