        "grok-beta": {
            "context_tokens": 128_000,
            "max_output_tokens": 4096,
            "description": "Legacy Grok Beta model with 128K context"
        },
        # Shorthand mappings for common model names
        "grok-3": {
            "context_tokens": 1_000_000,
            "max_output_tokens": 4096,
            "description": "Grok 3 model (alias for grok-3-beta)"
        },
        "grok-3-mini": {
