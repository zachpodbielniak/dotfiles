    model_specs = {
        # Grok 4 models - 256K context window
        "grok-4": {
            "context_tokens": 256_000,
            "max_output_tokens": 4096,
            "description": "Latest Grok 4 model with 256K context window"
        },
        "grok-4-heavy": {
            "context_tokens": 256_000,
            "max_output_tokens": 4096,
            "description": "Grok 4 Heavy multi-agent model with 256K context"
        },
