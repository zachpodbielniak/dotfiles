import sys
import argparse
import json

def usage():
	print("""is_yaml - Validate if input is valid YAML

USAGE:
	is_yaml [OPTIONS] [STRING]

ARGUMENTS:
	STRING          YAML string to check (if omitted, reads from stdin)

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--quiet         No output, just exit code
	--json          If valid, output as JSON

EXAMPLES:
	echo "key: value" | is_yaml && echo "Valid YAML"
	is_yaml "key: value" && echo "Valid YAML"
	is_yaml "key: value" --json | jq .
""")

def main() -> int:
	parser = argparse.ArgumentParser(add_help=False)
	parser.add_argument('string', nargs='?', default=None, help='YAML string to validate')
	parser.add_argument('--quiet', action='store_true')
	parser.add_argument('--json', action='store_true')
	parser.add_argument('-h', '--help', action='store_true')
	parser.add_argument('--license', action='store_true')

	args = parser.parse_args()

	if args.help:
		usage()
		return 0

	if args.license:
		print("AGPLv3")
		return 0

	try:
		import yaml
	except ImportError:
		if not args.quiet:
			print("is_yaml: PyYAML not installed", file=sys.stderr)
			print("Install with: pip install pyyaml", file=sys.stderr)
		return 1

	# Determine input source
	if args.string:
		content = args.string
	else:
		content = sys.stdin.read()

	if not content.strip():
		if not args.quiet:
			print("is_yaml: empty input", file=sys.stderr)
		return 1

	try:
		data = yaml.safe_load(content)
		if args.json:
			print(json.dumps(data, indent=2))
		return 0
	except yaml.YAMLError as e:
		if not args.quiet:
			print(f"is_yaml: invalid YAML: {e}", file=sys.stderr)
		return 1

if __name__ == "__main__":
	sys.exit(main())
