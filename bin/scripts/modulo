set -euo pipefail

usage () {
	cat << 'EOF'
modulo - Calculate remainder (modulo) of numbers

USAGE:
modulo [OPTIONS] DIVISOR

OPTIONS:
-h, --help      Show this help message
--license       Show license information

ARGUMENTS:
DIVISOR         The divisor to use for modulo operation

EXAMPLES:
echo -e "10\n11\n12" | modulo 3
# Output:
# 1
# 2
# 0

echo "17" | modulo 5
# Output: 2

EOF
}

if [[ $# -lt 1 ]]; then
	echo "modulo: missing DIVISOR argument" >&2
	usage >&2
	exit 1
fi

divisor=1

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ "${1:-}" =~ ^[0-9]+$ ]]; then
			divisor="${1}"
		else
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Calculate modulo
awk -v div="$divisor" '{print $1 % div}'
