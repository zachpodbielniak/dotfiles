set -euo pipefail

usage () {
	cat << 'EOF'
iso_to_epoch - Convert ISO 8601 to Unix epoch

USAGE:
	iso_to_epoch [OPTIONS]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--ms            Output milliseconds

EXAMPLES:
	echo "2023-11-14T22:13:20Z" | iso_to_epoch
	cat dates.txt | iso_to_epoch --ms

EOF
}

as_milliseconds=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--ms) as_milliseconds=true; shift ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

while IFS= read -r iso_date; do
	if [[ -z "$iso_date" ]]; then
		continue
	fi

	# Convert ISO 8601 to epoch
	epoch=$(date -d "$iso_date" +%s)

	if [[ "$as_milliseconds" == true ]]; then
		echo $((epoch * 1000))
	else
		echo "$epoch"
	fi
done
