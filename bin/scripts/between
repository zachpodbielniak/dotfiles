set -euo pipefail

usage () {
	cat << 'EOF'
between - Extract lines between patterns

USAGE:
	between [OPTIONS] <start_pattern> <end_pattern>

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	--exclusive         Don't include delimiter lines
	--first             Only first match

EXAMPLES:
	cat log.txt | between "START" "END"
	cat log.txt | between --exclusive "BEGIN" "FINISH"
	cat config.txt | between "START" "END" --first

EOF
}

start_pattern=""
end_pattern=""
exclusive=false
first_only=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--exclusive) exclusive=true; shift ;;
		--first) first_only=true; shift ;;
		*)
			if [[ -z "$start_pattern" ]]; then
				start_pattern="${1}"
				shift
			elif [[ -z "$end_pattern" ]]; then
				end_pattern="${1}"
				shift
			else
				echo "Error: unexpected argument '$1'" >&2
				exit 1
			fi
			;;
	esac
done

if [[ -z "$start_pattern" ]] || [[ -z "$end_pattern" ]]; then
	echo "Error: both start and end patterns required" >&2
	exit 1
fi

if [[ "$exclusive" == true ]]; then
	if [[ "$first_only" == true ]]; then
		awk "/$start_pattern/{flag=1; next} /$end_pattern/{flag=0; next} flag"
	else
		awk "/$start_pattern/{flag=1; next} /$end_pattern/{flag=0; next} flag"
	fi
else
	if [[ "$first_only" == true ]]; then
		awk "/$start_pattern/{flag=1} flag; /$end_pattern/{flag=0; exit}"
	else
		awk "/$start_pattern/{flag=1} flag; /$end_pattern/{flag=0}"
	fi
fi
