#!/bin/bash 
set -euo pipefail

cr_dir="${HOME}/.config/canned_reponses/cr.yaml"
yq .responses[].name < "${cr_dir}" | \
    fzf -i --height=100% --preview="yq '.responses[] | select(.name == \"{}\").text' < \"${cr_dir}\"" --tmux center | \
    sed -z 's/\n//g' | \
    xargs -0 -I % bash -c "yq '.responses[] | select(.name == \"%\").text' < ${cr_dir}" | \
    xargs -0 -I % echo -e '%' | \
    wl-copy

