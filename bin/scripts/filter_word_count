set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Count words, characters, and lines with summary

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Outputs the original content followed by a statistics summary
    showing line count, word count, and character count.

OPTIONS:
    -h, --help      Show this help message and exit
    -s, --summary-only  Only show the summary, not the original content
    --license       Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Count words in selection
    echo "Hello world, this is a test" | ${SCRIPT_NAME}

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local summary_only=0
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -s|--summary-only)
                summary_only=1
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local content
    if [[ -n "${file_path}" ]]; then
        content=$(cat "${file_path}")
    else
        content=$(cat)
    fi

    local lines words chars
    lines=$(echo "${content}" | wc -l)
    words=$(echo "${content}" | wc -w)
    chars=$(echo "${content}" | wc -c)

    if [[ ${summary_only} -eq 0 ]]; then
        echo "${content}"
        echo ""
    fi

    echo "## Word Count Summary"
    echo "| Metric | Count |"
    echo "|--------|-------|"
    echo "| Lines | ${lines} |"
    echo "| Words | ${words} |"
    echo "| Characters | ${chars} |"
}

main "$@"
