set -euo pipefail

usage () {
	cat << 'EOF'
file_extension - Extract file extension

USAGE:
file_extension [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information

EXAMPLES:
echo "document.pdf" | file_extension
# Output: pdf

echo "/path/to/archive.tar.gz" | file_extension
# Output: gz

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Extract extension from each filename
while IFS= read -r file; do
	# Get basename first
	name=$(basename "${file}")
	# Extract extension (everything after last dot)
	if [[ "${name}" == *.* ]]; then
		echo "${name##*.}"
	fi
done
