set -euo pipefail

usage () {
	cat << 'EOF'
running_total - Output cumulative sum of numbers

USAGE:
	running_total [OPTIONS]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	-p, --precision N   Decimal precision (default: 2)
	--reset-on PATTERN  Reset total when pattern matches

EXAMPLES:
	echo -e "10\n20\n30" | running_total
	echo -e "10\n20\n30" | running_total -p 0

DESCRIPTION:
	For each number in stdin, output the cumulative sum up to
	that point (running total).

EOF
}

precision=2

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-p|--precision)
			precision="$2"
			shift 2
			;;
		*)
			echo "running_total: unknown option: $1" >&2
			exit 1
			;;
	esac
done

# Use awk to calculate running total
awk -v prec=$precision '
	{
		total += $1
		printf "%.*f\n", prec, total
	}
'
