set -euo pipefail

usage () {
	cat << 'EOF'
base64_encode - Base64 encode input

USAGE:
base64_encode [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information

EXAMPLES:
echo "hello" | base64_encode
# Output: aGVsbG8=

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Base64 encode, no line wrapping
base64 -w0
