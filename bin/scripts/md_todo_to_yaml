#!/bin/bash 
set -euo pipefail 

KEY="todo"
CATEGORY=""
IN_FRONTMATTER=false

echo "---"
echo "${KEY}: "

while read -r line 
do 
    # Handle YAML frontmatter
    if [[ "${line}" =~ ^--- ]]; then
        IN_FRONTMATTER=$([ "${IN_FRONTMATTER}" = "false" ] && echo "true" || echo "false")
        continue
    fi
    
    # Skip lines inside frontmatter
    if [[ "${IN_FRONTMATTER}" == "true" ]]; then
        continue
    fi
    
    # Skip empty lines and main title
    if [[ "${line}" =~ ^[[:space:]]*$ ]] || [[ "${line}" =~ ^#[[:space:]] ]]; then
        continue
    fi
    
    # Look for section heading (## category)
    if [[ "${line}" =~ ^##[[:space:]]+ ]]; then
        CATEGORY="$(sed 's/^##[[:space:]]*//' <<< "${line}" | xargs)"
        continue
    fi

    # Look for todo items: - [ ] task (date)
    if [[ "${line}" =~ ^[[:space:]]*-[[:space:]]*\[[[:space:]]*\][[:space:]]+ ]]; then
        # Extract the task and date
        task_with_date=$(sed 's/^[[:space:]]*-[[:space:]]*\[[[:space:]]*\][[:space:]]*//' <<< "${line}")
        
        # Check if there's a date in parentheses at the end
        if [[ "${task_with_date}" == *"("*")" ]]; then
            # Extract task (everything before the last opening parenthesis)
            task=$(sed 's/[[:space:]]*([^)]*)$//' <<< "${task_with_date}")
            # Extract date (everything between the last parentheses)
            due=$(sed 's/.*(\([^)]*\)).*/\1/' <<< "${task_with_date}")
        else
            task="${task_with_date}"
            due=""
        fi

        printf "  - task: \"${task}\"\n    category: \"${CATEGORY}\"\n    due: \"${due}\"\n    status: \" \"\n    real_status: \"not-started\"\n"
    fi
done