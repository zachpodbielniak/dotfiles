set -euo pipefail

usage () {
	cat << 'EOF'
pick - Select arbitrary line ranges

USAGE:
	pick [OPTIONS] <selection>

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information

EXAMPLES:
	cat file.txt | pick 5                    # line 5
	cat file.txt | pick 5-10                 # lines 5-10
	cat file.txt | pick 5,10,15              # specific lines
	cat file.txt | pick -5                   # last 5 lines

EOF
}

selection=""

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		*)
			if [[ -z "$selection" ]]; then
				selection="${1}"
				shift
			else
				echo "Error: unexpected argument '$1'" >&2
				exit 1
			fi
			;;
	esac
done

if [[ -z "$selection" ]]; then
	echo "Error: selection argument required" >&2
	exit 1
fi

# Parse selection and output matching lines
if [[ "$selection" =~ ^- ]]; then
	# Last N lines
	num="${selection:1}"
	tail -n "$num"
elif [[ "$selection" =~ ^[0-9]+-[0-9]+$ ]]; then
	# Range (e.g., 5-10)
	start="${selection%-*}"
	end="${selection#*-}"
	sed -n "${start},${end}p"
elif [[ "$selection" =~ ^[0-9]+$ ]]; then
	# Single line
	sed -n "${selection}p"
elif [[ "$selection" =~ , ]]; then
	# Multiple lines (e.g., 5,10,15)
	# Convert comma-separated to sed commands
	sed_cmd=""
	IFS=',' read -ra lines <<< "$selection"
	for line in "${lines[@]}"; do
		line=$(echo "$line" | xargs)  # trim whitespace
		if [[ -n "$sed_cmd" ]]; then
			sed_cmd="$sed_cmd;${line}p"
		else
			sed_cmd="${line}p"
		fi
	done
	sed -n "$sed_cmd"
else
	echo "Error: invalid selection format: $selection" >&2
	exit 1
fi
