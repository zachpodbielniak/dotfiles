#!/bin/bash 

if [[ $# -lt 1 ]]
then 
    echo "Usage: ${0} <command> [pre-args...] -- [post-args...]"
    echo "  evals to: <command> [pre-args] <file> [post-args]"
    exit 1
fi

pre_args=()
post_args=()
command="${1}"
shift

arg_mode="pre"
while [[ ${#} -gt 0 ]]
do 
    if [[ "--" == "${1}" ]]
    then 
        arg_mode="post"
        shift
        continue
    fi

    if [[ "pre" == "${arg_mode}" ]]
    then
        pre_args+=("${1}")
    else 
        post_args+=("${1}")
    fi
    shift
done

for f in ./*;
do 
    "${command}" ${pre_args[@]} "${f}" ${post_args[@]}
done

