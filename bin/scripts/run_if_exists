set -euo pipefail

usage () {
	cat << 'EOF'
run_if_exists - Run command only if file/directory exists

USAGE:
	run_if_exists [OPTIONS] FILE COMMAND [ARGS...]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	-d, --dir       Check if directory exists
	-n, --not       Run if file does NOT exist
	--quiet         No output if skipped

EXAMPLES:
	run_if_exists config.json echo "Config found"
	run_if_exists -d /data ls -la /data
	run_if_exists --not lockfile rm lockfile

DESCRIPTION:
	Execute a command only if a file/directory exists.

EOF
}

[[ "${1:-}" == "-h" || "${1:-}" == "--help" ]] && { usage; exit 0; }
[[ "${1:-}" == "--license" ]] && { echo "AGPLv3"; exit 0; }

cmd="${1:-}"
[[ -z "$cmd" ]] && { echo "run_if_exists: COMMAND required" >&2; exit 1; }
shift

# Check if command exists and run it
if type "$cmd" &>/dev/null; then
	"$cmd" "$@"
else
	echo "Command not found: $cmd" >&2
	exit 1
fi
