set -euo pipefail

usage () {
	cat << 'EOF'
filter_numbers - Extract all numbers from text

USAGE:
	filter_numbers [OPTIONS]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	--first             Only output first number
	--sum               Output sum of all numbers
	--integers          Only integers (no decimals)
	--delimiter SEP     Output separator (default: newline)

EXAMPLES:
	echo "foo 42 bar 3.14 baz -5" | filter_numbers
	echo "1.5 2.5 3.5" | filter_numbers --sum
	echo "a1b2c3" | filter_numbers --integers

EOF
}

first_only=false
sum_mode=false
integers_only=false
delimiter=$'\n'

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--first) first_only=true; shift ;;
		--sum) sum_mode=true; shift ;;
		--integers) integers_only=true; shift ;;
		--delimiter) delimiter="${2}"; shift 2 ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

# Extract numbers from input
if [[ "$integers_only" == true ]]; then
	numbers=$(grep -oE '\-?[0-9]+' || true)
else
	numbers=$(grep -oE '\-?[0-9]*\.?[0-9]+' || true)
fi

if [[ "$first_only" == true ]]; then
	echo "$numbers" | head -1
elif [[ "$sum_mode" == true ]]; then
	echo "$numbers" | awk '{sum += $1} END {print sum}'
else
	if [[ "$delimiter" == $'\n' ]]; then
		echo "$numbers"
	else
		echo "$numbers" | paste -sd "$delimiter"
	fi
fi
