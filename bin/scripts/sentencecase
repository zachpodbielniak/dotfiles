set -euo pipefail

usage () {
	cat << 'EOF'
sentencecase - Capitalize first letter of sentences

USAGE:
	sentencecase [OPTIONS]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information

EXAMPLES:
	echo "hello world. how are you?" | sentencecase
	cat text.txt | sentencecase

EOF
}

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

# Capitalize first letter after sentence boundaries
sed 's/^\([a-z]\)/\U\1/;
     s/\([.!?] \)\([a-z]\)/\1\U\2/g;
     s/\([.!?]\)$/\1/g'
