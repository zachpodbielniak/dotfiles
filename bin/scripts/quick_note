# along with this program.  If not, see <https://www.gnu.org/licenses/>.

set -euo pipefail

show_help() {
    cat <<EOF
quick_note - Quickly capture a note via wofi dmenu

USAGE:
    quick_note [OPTIONS]

OPTIONS:
    -h, --help      Show this help message
    --license       Show license information

DESCRIPTION:
    Opens a wofi dmenu prompt to capture a quick note. Notes are appended
    to ~/Documents/notes/00_inbox/quick_note.md with a timestamp.

EXAMPLES:
    quick_note          # Open dmenu prompt and capture note
EOF
}

show_license() {
    cat <<EOF
quick_note - Copyright (C) 2025 Zach Podbielniak

This program is free software: you can redistribute it and/or modify
it under the terms of the GNU Affero General Public License as published by
the Free Software Foundation, either version 3 of the License, or
(at your option) any later version.

This program is distributed in the hope that it will be useful,
but WITHOUT ANY WARRANTY; without even the implied warranty of
MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
GNU Affero General Public License for more details.

You should have received a copy of the GNU Affero General Public License
along with this program.  If not, see <https://www.gnu.org/licenses/>.
EOF
}

# Parse arguments
case "${1:-}" in
    -h|--help)
        show_help
        exit 0
        ;;
    --license)
        show_license
        exit 0
        ;;
esac

note_file="${HOME}/Documents/notes/00_inbox/quick_note.md"

# Capture note via wofi dmenu
note=$(wofi --dmenu --prompt "note:" 2>/dev/null) || {
    echo "No note entered or wofi cancelled" >&2
    exit 1
}

# Exit if empty note
if [[ -z "${note}" ]]; then
    echo "Empty note, nothing to save" >&2
    exit 1
fi

# Append to existing file or create new one with frontmatter
if [[ -f "${note_file}" ]]; then
    echo "- ($(today)): ${note}" >> "${note_file}"
else
    mkdir -p "$(dirname "${note_file}")"
    cat > "${note_file}" <<EOF
---
title: quick_note
author: zach
date: $(today)
---

# quick note
- ($(today)): ${note}
EOF
fi

echo "Note saved to ${note_file}"

