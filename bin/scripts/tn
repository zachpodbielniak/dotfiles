# Nested tmux
set -euo pipefail 

if [[ $# -lt 1 ]]
then 
    echo "Usage: $(basename ${0}) <session_name>"
    exit 1
fi

ses_name="${1}"
tmux_check=$(tmux ls | grep -P "^${ses_name}" || true)

# rename window in parent tmux session
tmux rename-window -t "main" "${ses_name}"

if [[ "${tmux_check}" == "" ]]
then 
    env TMUX="" tmux -2 -f "${HOME}/.config/tmux/tmux-nested.conf" new-ses -d -s ${ses_name}
fi

env TMUX="" tmux -2 -f "${HOME}/.config/tmux/tmux-nested.conf" a -t ${ses_name}

