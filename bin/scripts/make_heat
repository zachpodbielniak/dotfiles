use strict;
use warnings;
use threads;

my $cpu_count = `nproc`;
my $tasks_per_core = 2;
my @threads;

sub thread_task {
    while(1){ 0; }
}

my $i = 0;
while ($i < ($cpu_count * $tasks_per_core)) {
    my $thread_handle = threads->create(\&thread_task);
    push(@threads, $thread_handle);
}

$i = 0;
while ($i < ($cpu_count * $tasks_per_core)) {
    my $thread_handle = $threads[$i];
    $thread_handle->join();
}

