#!/bin/bash

set -euo pipefail

usage() {
	cat << 'EOF'
middle_line - Get lines from middle of input

USAGE: middle_line [OPTIONS] SKIP COUNT

OPTIONS:
-h, --help      Show help
--license       License

EXAMPLES:
echo -e "a\nb\nc\nd\ne" | middle_line 1 2
# Output: b\nc
EOF
}

[[ "${1:-}" == "-h" || "${1:-}" == "--help" ]] && { usage; exit 0; }
[[ "${1:-}" == "--license" ]] && { echo "AGPLv3"; exit 0; }

skip="${1:-0}"
count="${2:-1}"
tail -n +$((skip + 1)) | head -n "$count"
