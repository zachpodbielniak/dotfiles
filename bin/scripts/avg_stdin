set -euo pipefail

usage () {
	cat << 'EOF'
avg_stdin - Average of numbers from stdin

USAGE:
	avg_stdin [OPTIONS]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	--precision N       Decimal places (default: 2)

EXAMPLES:
	echo -e "10\n20\n30" | avg_stdin
	cat numbers.txt | avg_stdin --precision 4

EOF
}

precision=2

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--precision) precision="${2}"; shift 2 ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

awk -v p="$precision" '{sum += $1; count++} END {
	if (count > 0) {
		avg = sum / count
		fmt = "%." p "f\n"
		printf fmt, avg
	} else {
		print 0
	}
}'
