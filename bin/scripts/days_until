#!/usr/bin/env perl
use strict;
use warnings;
use Time::Piece;

($#ARGV+1) >= 1 or die("Usage: days_since <date_in_%Y-%m-%d>\n");

my $cur_date = Time::Piece->strptime(localtime->strftime("%Y-%m-%d"), "%Y-%m-%d");
my $fut_date = Time::Piece->strptime($ARGV[0], "%Y-%m-%d");

my $secs_diff = $fut_date->epoch - $cur_date->epoch;
my $days_diff = $secs_diff / (24*60*60);

printf("%d\n", $days_diff);

