set -euo pipefail

usage () {
	cat << 'EOF'
template_fill - Simple variable substitution

USAGE:
	template_fill [OPTIONS] [KEY=VALUE ...]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	--env               Use environment variables
	--file FILE         Load from file (KEY=VALUE pairs)
	--strict            Error on undefined variables

EXAMPLES:
	echo "Hello {{name}}!" | template_fill name=World
	cat template.md | template_fill --env

EOF
}

use_env=false
var_file=""
strict=false
declare -A vars

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--env) use_env=true; shift ;;
		--file) var_file="${2}"; shift 2 ;;
		--strict) strict=true; shift ;;
		*=*)
			key="${1%%=*}"
			value="${1#*=}"
			vars["$key"]="$value"
			shift
			;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

# Load from file if specified
if [[ -n "$var_file" ]] && [[ -f "$var_file" ]]; then
	while IFS='=' read -r key value; do
		# Skip comments and empty lines
		[[ "$key" =~ ^[[:space:]]*# ]] && continue
		[[ -z "$key" ]] && continue
		vars["$key"]="$value"
	done < "$var_file"
fi

# Process stdin
while IFS= read -r line; do
	output="$line"

	# Find and replace all {{key}} patterns
	while [[ "$output" =~ \{\{([^}]+)\}\} ]]; do
		key="${BASH_REMATCH[1]}"
		value=""

		# Check for value in vars array
		if [[ -n "${vars[$key]:-}" ]]; then
			value="${vars[$key]}"
		elif [[ "$use_env" == true ]]; then
			value="${!key:-}"
		fi

		if [[ -z "$value" ]]; then
			if [[ "$strict" == true ]]; then
				echo "Error: undefined variable: $key" >&2
				exit 1
			else
				value="{{$key}}"  # Keep original if not found
			fi
		fi

		# Replace first occurrence
		output="${output/\{\{$key\}\}/$value}"
	done

	echo "$output"
done
