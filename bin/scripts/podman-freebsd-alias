#!/bin/bash
# Podman alias setup for FreeBSD
# Source this file in your .bashrc or .zshrc

# Default podman to use Linux containers with host networking on FreeBSD
if [[ "$(uname)" == "FreeBSD" ]]; then
    alias podman='podman --os=linux'
    alias podman-host='podman --os=linux --network=host'
    
    # Function for running containers with DNS working
    podrun() {
        podman run --os=linux --network=host "$@"
    }
    
    # Function for running interactive containers
    podi() {
        podman run --os=linux --network=host -it "$@"
    }
    
    # Function for executing commands in running containers
    podexec() {
        podman exec -it "$@"
    }
fi