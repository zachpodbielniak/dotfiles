set -euo pipefail

usage () {
	cat << 'EOF'
hash_stdin - Hash stdin with algorithm choice

USAGE:
	hash_stdin [OPTIONS] [algorithm]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information

ALGORITHMS:
	md5, sha1, sha256 (default), sha384, sha512

EXAMPLES:
	echo "hello" | hash_stdin
	echo "hello" | hash_stdin md5
	cat file.txt | hash_stdin sha512

EOF
}

algorithm="sha256"

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		md5|sha1|sha256|sha384|sha512)
			algorithm="${1}"
			shift
			;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

# Use appropriate command
case "$algorithm" in
	md5) md5sum | awk '{print $1}' ;;
	sha1) sha1sum | awk '{print $1}' ;;
	sha256) sha256sum | awk '{print $1}' ;;
	sha384) sha384sum | awk '{print $1}' ;;
	sha512) sha512sum | awk '{print $1}' ;;
	*) echo "Error: unknown algorithm '$algorithm'" >&2; exit 1 ;;
esac
