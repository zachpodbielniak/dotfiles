q_path="$HOME/Documents/notes/02_areas/questions.norg"

if [ ! -f "$q_path" ]; then 
    touch "$q_path"
    echo "* Questions" >> "$q_path" 
fi

if [ $# -lt 1 ]; then 
    echo "Use this correctly!"
    echo "\t$0 <question>"
    exit 1
fi

echo -e "  - $(today):  $@" >> "$q_path"

