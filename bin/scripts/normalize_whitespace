set -euo pipefail

usage () {
	cat << 'EOF'
normalize_whitespace - Collapse multiple whitespace to single space, trim leading/trailing

USAGE:
normalize_whitespace [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information
--lines         Also collapse multiple blank lines to single

EXAMPLES:
echo "  foo   bar  " | normalize_whitespace
# Output: foo bar

echo -e "line1\n\n\nline2" | normalize_whitespace --lines
# Output: line1\nline2

EOF
}

collapse_lines=0

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	--lines) collapse_lines=1 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

if [[ $collapse_lines -eq 1 ]]; then
	# Collapse multiple blank lines first, then normalize whitespace in each line
	cat -s | sed 's/^[[:space:]]*//;s/[[:space:]]*$//;s/[[:space:]]\+/ /g'
else
	# Just normalize whitespace on each line
	sed 's/^[[:space:]]*//;s/[[:space:]]*$//;s/[[:space:]]\+/ /g'
fi
