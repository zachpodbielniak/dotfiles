set -euo pipefail

usage () {
	cat << 'EOF'
basename_path - Extract filename from path

USAGE:
basename_path [OPTIONS]

OPTIONS:
-h, --help        Show this help message
--license         Show license information
-s SUFFIX         Remove suffix from result

EXAMPLES:
echo "/usr/bin/ls" | basename_path
# Output: ls

echo "/path/to/file.txt" | basename_path -s ".txt"
# Output: file

EOF
}

suffix=""

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		-s)
			suffix="${2}"
			shift 2
			;;
		*)
			if [[ -n "${1:-}" ]]; then
				echo "Unknown option: ${1}" >&2
				usage >&2
				exit 1
			fi
			shift
			;;
	esac
done

# Extract basename from each path
while IFS= read -r path; do
	base=$(basename "${path}" "${suffix}")
	echo "${base}"
done
