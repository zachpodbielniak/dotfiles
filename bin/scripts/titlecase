set -euo pipefail

usage () {
	cat << 'EOF'
titlecase - Convert text to Title Case

USAGE:
	titlecase [OPTIONS]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--smart         Don't capitalize articles/prepositions mid-sentence

EXAMPLES:
	echo "hello world" | titlecase
	echo "the quick brown fox" | titlecase --smart

EOF
}

smart=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--smart) smart=true; shift ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

if [[ "$smart" == true ]]; then
	# Smart title case
	sed 's/\([^ ]\)\([^ ]*\)/\U\1\L\2/g;
	     s/ the / the /gi;
	     s/ a / a /gi;
	     s/ an / an /gi;
	     s/ and / and /gi;
	     s/ or / or /gi;
	     s/ in / in /gi;
	     s/ of / of /gi;
	     s/ for / for /gi;
	     s/ at / at /gi;
	     s/ by / by /gi;
	     s/ to / to /gi;
	     s/ with / with /gi;
	     s/ as / as /gi;
	     s/ if / if /gi;
	     s/ but / but /gi'
else
	# Simple title case - capitalize first letter of each word
	sed 's/\([^ ]\)\([^ ]*\)/\U\1\L\2/g'
fi
