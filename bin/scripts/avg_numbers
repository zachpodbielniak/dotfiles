set -euo pipefail

usage () {
	cat << 'EOF'
avg_numbers - Calculate average of numbers from input

USAGE:
avg_numbers [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information

EXAMPLES:
echo -e "1\n2\n3" | avg_numbers
# Output: 2

echo -e "10\n20\n30" | avg_numbers
# Output: 20

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Calculate average of numbers
awk '{sum += $1; count++} END {print (count > 0) ? sum / count : 0}'
