use strict;
use warnings;
use Time::Piece;

($#ARGV+1) >= 1 or die("Usage: days_delta <days_to_add_or_sub>\n");

my $cur_date = Time::Piece->strptime(localtime->strftime("%Y-%m-%d"), "%Y-%m-%d");
my $days_add = $ARGV[0];

my $cur_epoch = $cur_date->epoch;
my $days_add_epoch = $cur_epoch + (24*60*60*$days_add);

my $days_add_date = Time::Piece->strptime($days_add_epoch, '%s');

printf("%s\n", $days_add_date->strftime("%Y-%m-%d"));

