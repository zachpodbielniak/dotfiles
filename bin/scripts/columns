set -euo pipefail

usage () {
	cat << 'EOF'
columns - Simple column selector

USAGE:
	columns [OPTIONS] <selection>

OPTIONS:
	-h, --help              Show this help message
	--license               Show license information
	-d, --delimiter DELIM   Field delimiter (default: whitespace)
	-o, --output DELIM      Output delimiter (default: tab)

EXAMPLES:
	echo "a b c d e" | columns 1,3,5
	cat data.csv | columns -d',' 2-4
	echo "a:b:c:d" | columns -d: -o' ' 1,4

EOF
}

selection=""
delimiter="[ ]+"
output_delimiter=$'\t'

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		-d|--delimiter) delimiter="${2}"; shift 2 ;;
		-o|--output) output_delimiter="${2}"; shift 2 ;;
		*)
			if [[ -z "$selection" ]]; then
				selection="${1}"
				shift
			else
				echo "Error: unexpected argument '$1'" >&2
				exit 1
			fi
			;;
	esac
done

if [[ -z "$selection" ]]; then
	echo "Error: selection argument required" >&2
	exit 1
fi

# Build AWK command
# Parse selection (e.g., "1,3,5" or "2-4" or mix)
awk_cmd="BEGIN {FS=\"$delimiter\"; OFS=\"$output_delimiter\"} {print "

# Process selection
if [[ "$selection" =~ ^[0-9]+-[0-9]+$ ]]; then
	# Range
	start="${selection%-*}"
	end="${selection#*-}"
	fields=""
	for ((i = start; i <= end; i++)); do
		if [[ -n "$fields" ]]; then
			fields="$fields, \$$i"
		else
			fields="\$$i"
		fi
	done
	awk_cmd="${awk_cmd}${fields}"
elif [[ "$selection" =~ , ]]; then
	# Multiple specific columns
	fields=""
	IFS=',' read -ra cols <<< "$selection"
	for col in "${cols[@]}"; do
		col=$(echo "$col" | xargs)  # trim whitespace
		if [[ "$col" =~ ^[0-9]+-[0-9]+$ ]]; then
			# Range in list
			start="${col%-*}"
			end="${col#*-}"
			for ((i = start; i <= end; i++)); do
				if [[ -n "$fields" ]]; then
					fields="$fields, \$$i"
				else
					fields="\$$i"
				fi
			done
		else
			if [[ -n "$fields" ]]; then
				fields="$fields, \$$col"
			else
				fields="\$$col"
			fi
		fi
	done
	awk_cmd="${awk_cmd}${fields}"
else
	# Single column
	awk_cmd="${awk_cmd}\$$selection"
fi

awk_cmd="${awk_cmd}\"}"

eval "awk '$awk_cmd'"
