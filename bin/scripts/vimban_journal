# vimban_journal - Quick journal entry creation
#
# Usage:
#   vimban_journal "Journal title"
#   vimban_journal "Journal title" --date 2025-01-15
#   vimban_journal --work "Work reflection"
#
# Defaults:
#   ticket_date: today
#   scope: personal (journals are personal by default)

set -euo pipefail

show_help () {
    cat <<EOF
vimban_journal - Quick journal entry creation

Usage:
    vimban_journal [options] "Journal title"
    vimban_journal "Journal title" [vimban options]

Defaults:
    ticket_date: today
    scope: personal (journals are personal by default)

Options:
    -h, --help          Show this help message
    -d, --date DATE     Set journal date (YYYY-MM-DD, default: today)
    --work              Create in work scope (overrides personal default)
    --personal          Create in personal scope (default)

Any additional options are passed through to vimban create journal.

Examples:
    vimban_journal "Daily reflection"
    vimban_journal "Weekly review" --date 2025-01-15
    vimban_journal --work "Sprint retrospective thoughts"
    vimban_journal "Gratitude entry"
EOF
}

# Default values
ticket_date="$(date +%Y-%m-%d)"
use_personal=true

# Passthrough args (scope flags, title, other options)
passthrough_args=()

# Parse arguments
while [[ $# -gt 0 ]]
do
    case "${1}" in
        -h|--help)
            show_help
            exit 0
            ;;
        -d|--date)
            ticket_date="${2}"
            shift 2
            ;;
        --work)
            use_personal=false
            passthrough_args+=("${1}")
            shift
            ;;
        --personal)
            use_personal=true
            passthrough_args+=("${1}")
            shift
            ;;
        *)
            passthrough_args+=("${1}")
            shift
            ;;
    esac
done

# Check if we have at least a title in passthrough args
if [[ ${#passthrough_args[@]} -lt 1 ]]
then
    echo "Error: Journal title required" >&2
    echo "Usage: vimban_journal [options] \"Journal title\"" >&2
    exit 1
fi

# Build the command
cmd=(vimban create journal --ticket-date "${ticket_date}")

# Add personal scope if not overridden by --work
if [[ "${use_personal}" == true ]]
then
    # Check if --personal is already in passthrough_args
    if [[ ! " ${passthrough_args[*]} " =~ " --personal " ]]
    then
        cmd+=(--personal)
    fi
fi

# Add passthrough args and execute
exec "${cmd[@]}" "${passthrough_args[@]}"
