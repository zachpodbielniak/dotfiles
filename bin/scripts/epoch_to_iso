set -euo pipefail

usage () {
	cat << 'EOF'
epoch_to_iso - Convert Unix epoch to ISO 8601

USAGE:
	epoch_to_iso [OPTIONS]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--local         Use local timezone (default: UTC)
	--ms            Input is milliseconds
	--format FMT    Custom strftime format

EXAMPLES:
	echo "1700000000" | epoch_to_iso
	echo "1700000000" | epoch_to_iso --local
	cat epochs.txt | epoch_to_iso --ms

EOF
}

local_tz=false
is_milliseconds=false
format="%Y-%m-%dT%H:%M:%SZ"

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--local) local_tz=true; format="%Y-%m-%dT%H:%M:%S%z"; shift ;;
		--ms) is_milliseconds=true; shift ;;
		--format) format="${2}"; shift 2 ;;
		*) echo "Error: unexpected argument '$1'" >&2; exit 1 ;;
	esac
done

while IFS= read -r epoch; do
	if [[ -z "$epoch" ]]; then
		continue
	fi

	# Convert milliseconds to seconds if needed
	if [[ "$is_milliseconds" == true ]]; then
		epoch=$((epoch / 1000))
	fi

	if [[ "$local_tz" == true ]]; then
		date -d "@$epoch" "+$format"
	else
		date -u -d "@$epoch" "+$format"
	fi
done
