# when docked on lt-zach
# ‚ùØ xrandr --listmonitors
# Monitors: 3
#  0: +*eDP-1 2256/285x1504/190+1461+2880  eDP-1
#  1: +DP-11 2560/465x2880/523+0+0  DP-11
#  2: +DP-12 2560/465x2880/523+2560+0  DP-12


if [[ "lt-zach" == ${HOSTNAME} ]]
then 
    # check to see if we have more than one monitor
    monitors="$(xrandr --listmonitors)"
    monitor_count="$(head -n1 <<< "${monitors}" | awk '{print $2}')"
    
    if [[ ${monitor_count} -eq 3 ]]
    then 
        # docked
        xrandr \
            --output eDP-1 --primary --mode 2256x1504 --pos 1461x2880 --rotate normal \
            --output DP-1 --off \
            --output DP-2 --off \
            --output DP-3 --off \
            --output DP-4 --off \
            --output DP-5 --off \
            --output DP-6 --off \
            --output DP-7 --off \
            --output DP-8 --off \
            --output DP-9 --off \
            --output DP-10 --off \
            --output DP-11 --mode 2560x2880 --pos 0x0 --rotate normal \
            --output DP-12 --mode 2560x2880 --pos 2560x0 --rotate normal \
            --output DP-13 --off

    elif [[ ${monitor_count} -eq 2 ]]
    then 
        # docked -- lid closed
        xrandr \
            --output eDP-1 --off \
            --output DP-1 --off \
            --output DP-2 --off \
            --output DP-3 --off \
            --output DP-4 --off \
            --output DP-5 --off \
            --output DP-6 --off \
            --output DP-7 --off \
            --output DP-8 --off \
            --output DP-9 --off \
            --output DP-10 --off \
            --output DP-11 --primary --mode 2560x2880 --pos 0x0 --rotate normal \
            --output DP-12 --mode 2560x2880 --pos 2560x0 --rotate normal \
            --output DP-13 --off

    else 
        xrandr \
            --output eDP-1 --primary --mode 2256x1504 --pos 0x0 --rotate normal \
            --output DP-1 --off \
            --output DP-2 --off \
            --output DP-3 --off \
            --output DP-4 --off \
            --output DP-5 --off \
            --output DP-6 --off \
            --output DP-7 --off \
            --output DP-8 --off \
            --output DP-9 --off \
            --output DP-10 --off \
            --output DP-11 --off \
            --output DP-12 --off \
            --output DP-13 --off
    fi
    
    sleep 2
    touchpad=$(xinput list | grep -i Touchpad | awk '{print $6}' | awk -F= '{print $2}')
    xinput set-prop ${touchpad} 295 1
fi
