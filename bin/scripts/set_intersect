set -euo pipefail

usage () {
	cat << 'EOF'
set_intersect - Lines common to ALL inputs

USAGE:
	set_intersect [OPTIONS] FILE1 [FILE2 ...]
	set_intersect [OPTIONS] - FILE2  (read first input from stdin)

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	-i, --ignore-case Case-insensitive comparison

EXAMPLES:
	set_intersect file1.txt file2.txt
	cat file1.txt | set_intersect - file2.txt

DESCRIPTION:
	Output only lines that appear in ALL input files.
	Preserves order from the first file.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

ignore_case=false
files=()

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-i|--ignore-case)
			ignore_case=true
			shift
			;;
		-)
			files+=("$1")
			shift
			;;
		-*)
			echo "set_intersect: unknown option: $1" >&2
			exit 1
			;;
		*)
			files+=("$1")
			shift
			;;
	esac
done

if [[ ${#files[@]} -lt 2 ]]; then
	echo "set_intersect: at least two files required" >&2
	exit 1
fi

# Get first file
first_file="${files[0]}"
rest_files=("${files[@]:1}")

# Use grep to find lines that appear in all files
# Strategy: for each line in first file, check if it's in all other files
if [[ "$ignore_case" == "true" ]]; then
	seen=""
	while IFS= read -r line || [[ -n "$line" ]]; do
		[[ -z "$line" ]] && continue
		# Skip if already printed
		if echo "$seen" | grep -qi "^${line}$"; then
			continue
		fi
		# Check if line is in all other files (case-insensitive)
		in_all=true
		for f in "${rest_files[@]}"; do
			if ! grep -qi "^${line}$" "$f"; then
				in_all=false
				break
			fi
		done
		if [[ "$in_all" == "true" ]]; then
			echo "$line"
			seen+="${line}"$'\n'
		fi
	done < "$first_file"
else
	seen=""
	while IFS= read -r line || [[ -n "$line" ]]; do
		[[ -z "$line" ]] && continue
		# Skip if already printed
		if echo "$seen" | grep -q "^${line}$"; then
			continue
		fi
		# Check if line is in all other files
		in_all=true
		for f in "${rest_files[@]}"; do
			if ! grep -q "^${line}$" "$f"; then
				in_all=false
				break
			fi
		done
		if [[ "$in_all" == "true" ]]; then
			echo "$line"
			seen+="${line}"$'\n'
		fi
	done < "$first_file"
fi
