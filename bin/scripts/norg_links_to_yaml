#!/bin/bash 
set -euo pipefail

if [[ $# -lt 1 ]]
then 
    echo "Usage: $(basename $0) <key> < <file>"
    exit 1
fi

KEY="${1}"
GROUP=""


echo "---"
echo "${KEY}: "
while read -r line 
do 
    # look for section headings
    if [[ "${line}" =~ \*{1,}\  ]]
    then 
        # xargs trick to remove whitespace
        # also remove leading * for groups
        GROUP=$(xargs <<< "${line//\*/}")
    fi

    # look for bullet points
    if [[ "${line}" =~ -\ \[ ]]
    then 
        title=$(awk -F- '{ printf "%s\n", $2 }' <<< "${line}" | awk -F] '{ printf "%s\n", $1 }' | sed 's/\[//g' | xargs)
        url=$(awk -F'{' '{ printf "%s\n", $2}' <<< "${line}" | sed 's/.\{1\}$//')
        printf "  - name: %s\n    group: %s\n    url: \"%s\"\n" "${title}" "${GROUP}" "${url}"
    fi
done

