set -euo pipefail

usage () {
	cat << 'EOF'
max_number - Find maximum number from input

USAGE:
max_number [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information

EXAMPLES:
echo -e "3\n1\n2" | max_number
# Output: 3

echo -e "-5\n0\n10" | max_number
# Output: 10

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Find maximum number
awk 'NR==1 {max=$1} {if ($1 > max) max=$1} END {print max}'
