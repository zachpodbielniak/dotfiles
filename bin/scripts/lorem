set -euo pipefail

usage () {
	cat << 'EOF'
lorem - Generate placeholder text

USAGE:
	lorem [OPTIONS]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	--words N           Generate N words (default: 50)
	--sentences N       Generate N sentences
	--paragraphs N      Generate N paragraphs

EXAMPLES:
	lorem --words 10
	lorem --sentences 3
	lorem --paragraphs 2

DESCRIPTION:
	Generate Lorem Ipsum placeholder text.

EOF
}

words=50
sentences=0
paragraphs=0

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--words)
			words="$2"
			shift 2
			;;
		--sentences)
			sentences="$2"
			shift 2
			;;
		--paragraphs)
			paragraphs="$2"
			shift 2
			;;
		*)
			echo "lorem: unknown option: $1" >&2
			exit 1
			;;
	esac
done

# Lorem ipsum text
lorem_words=(lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua ut enim ad minim veniam quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur excepteur sint occaecat cupidatat non proident sunt in culpa qui officia deserunt mollit anim id est laborum)

output=""

if [[ $paragraphs -gt 0 ]]; then
	# Generate by paragraphs
	for ((p=0; p<paragraphs; p++)); do
		para=""
		sent=0
		while [[ $sent -lt 5 ]]; do
			# Each sentence: 5-15 words
			w=$((5 + RANDOM % 11))
			sent_words=""
			for ((i=0; i<w; i++)); do
				word_idx=$((RANDOM % ${#lorem_words[@]}))
				sent_words+="${lorem_words[$word_idx]} "
			done
			para+="${sent_words%. }. "
			((sent++))
		done
		output+="$para"$'\n\n'
	done
	echo "$output" | sed '$ d'
elif [[ $sentences -gt 0 ]]; then
	# Generate by sentences
	for ((s=0; s<sentences; s++)); do
		w=$((5 + RANDOM % 11))
		sent=""
		for ((i=0; i<w; i++)); do
			word_idx=$((RANDOM % ${#lorem_words[@]}))
			sent+="${lorem_words[$word_idx]} "
		done
		echo "${sent%. }."
	done
else
	# Generate by words
	for ((i=0; i<words; i++)); do
		word_idx=$((RANDOM % ${#lorem_words[@]}))
		output+="${lorem_words[$word_idx]} "
	done
	echo "$output"
fi
