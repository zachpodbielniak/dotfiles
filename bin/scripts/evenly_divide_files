num_dirs=$1
if [ -z "$num_dirs" ] || [ "$num_dirs" -lt 1 ]; then
  echo "Please provide a valid number of directories."
  exit 1
fi

# Create directories
# using a bash subshell since bash doesn't directly 
# support variables in brace-expansions
bash -c "mkdir -p dir_{1.."$num_dirs"}"

# Move files
find . -maxdepth 1 -type f | sort | awk -v nd="$num_dirs" '{print "mv \"" $0 "\" dir_" (NR % nd + 1)}' | bash

