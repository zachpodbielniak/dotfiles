#!/bin/bash 

if [ $# -lt 1 ]; then 
    echo "Use this correctly!"
    echo "\t$0 <amount>"
    exit 1
fi

DIV_RATE="0.08"
AMOUNT="$1"

OC_CAFL=$(bc < <(echo "${DIV_RATE}*${AMOUNT}"))
OC_REPL=$(bc < <(echo "${AMOUNT}/${DIV_RATE}"))

echo -e "Cashflow:\t\$${OC_CAFL}"
echo -e "Replace:\t\$${OC_REPL}"

