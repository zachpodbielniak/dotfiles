#!/bin/bash 
#
# can list pactl modules with
# - pactl list short modules | grep dummy

filename=""

if [[ $# -ge 1 ]]
then
    filename="${1}"
else 
    filename="${HOME}/Documents/recordings/$(date +'%Y-%m-%d_%H-%M-%S').ogg"
fi


# dummmy.monitor provided by systemd user service
ffmpeg_args=(
    "-y"
    "-f"
    "pulse"
    "-i"
    "dummy.monitor"
    "${filename}"
)

# record with ffmpeg
if [[ -f /usr/bin/ffmpeg ]]
then 
    /usr/bin/ffmpeg ${ffmpeg_args[@]}
else 
    distrobox enter dev -- /usr/bin/ffmpeg ${ffmpeg_args[@]}
fi

printf \
    "%s\n" \
    "output: ${filename}"
