#!/bin/bash 
#
# can list pactl modules with
# - pactl list short modules | grep dummy

filename=""

if [[ $# -ge 1 ]]
then
    filename="${1}"
else 
    filename="${HOME}/Documents/recordings/$(date +'%Y-%m-%d_%H-%M-%S').ogg"
fi


# load module 
# commented out as this is handled with dummy-monitor.service
# pactl load-module module-null-sink sink_name=dummy

# record with ffmpeg
distrobox enter dev -- \
    /usr/bin/ffmpeg \
    -y \
    -f pulse \
    -i dummy.monitor \
    "${filename}"

# unload module 
# commented out as this is handled with dummy-monitor.service
# pactl unload-module "$(pactl list short modules | grep 'sink_name=dummy' | awk '{print $1}')"

# post processing with whisper-cpp
# txt output is stored at ${filename}.txt
transcribe_audio "${filename}"

# after done transcribing, lets summarize it as markdown
ai_summary_as_markdown < "${filename}.txt" > "${filename}.md"

# place neorg copy on the clipboard
wl-copy <(mton < "${filename}.md")

