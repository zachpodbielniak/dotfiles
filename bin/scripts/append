set -euo pipefail

usage () {
	cat << 'EOF'
append - Append strings to each line of stdin

USAGE:
	command | append [OPTIONS] <string> [string...]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	-d, --delimiter     Delimiter between appended strings (default: "")
	-e                  Interpret backslash escapes in strings and delimiter
	-w, --whole         Operate on entire stdin as a unit instead of per-line

DESCRIPTION:
	Reads from stdin and appends the given strings to each line.
	Multiple strings are joined with the delimiter and appended together.

	In whole mode (-w), stdin is passed through first, then the suffix
	is printed on its own line. This is useful for wrapping content in pipes.

EXAMPLES:
	echo "hello" | append " world"
	  => hello world

	ls | append ".bak"
	  => file1.txt.bak
	  => file2.txt.bak

	echo "foo" | append -d "/" "bar" "baz"
	  => foo/bar/baz

	cat hosts.txt | append ":8080"
	  => localhost:8080

	echo "hello" | append -e "\tworld"
	  => hello	world

	echo "test" | prepend -w '```' | append -w '```'
	  => ```
	  => test
	  => ```

EOF
}

strings=()
delimiter=""
interpret_escapes=false
whole_mode=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		-e) interpret_escapes=true; shift ;;
		-w|--whole) whole_mode=true; shift ;;
		-d|--delimiter)
			delimiter="${2}"
			shift 2
			;;
		*)
			strings+=("${1}")
			shift
			;;
	esac
done

if [[ ${#strings[@]} -eq 0 ]]; then
	echo "Error: at least one string to append is required" >&2
	usage >&2
	exit 1
fi

# Interpret escapes if -e is set
# Uses printf -v to assign directly, avoiding $() newline stripping
_expand () {
	local -n _ref="${1}"
	if [[ "${interpret_escapes}" == true ]]; then
		printf -v _ref '%b' "${2}"
	else
		_ref="${2}"
	fi
}

_expand delimiter "${delimiter}"

# Build the suffix by joining all strings with the delimiter
_expand suffix "${strings[0]}"
for ((i = 1; i < ${#strings[@]}; i++)); do
	_expand _tmp "${strings[$i]}"
	suffix="${suffix}${delimiter}${_tmp}"
done
unset _tmp

# Output stdin then suffix
if [[ "${whole_mode}" == true ]]; then
	# Whole mode: pass stdin through, then print suffix
	cat
	printf '%s\n' "${suffix}"
else
	# Per-line mode: append suffix to each line
	while IFS= read -r line; do
		printf '%s%s%s\n' "${line}" "${delimiter}" "${suffix}"
	done
fi
