prompt="Write a concise git commit message for these following conventional commits for these changes. Output ONLY the commit message, no explanation. Do NOT include any codeblocks."
spec_file="${HOME}/Documents/notes/03_resources/technical/git/conventional_commits_specification.md"

if [[ "$(git diff --staged)" == "" ]]
then 
    echo "Nothing is staged to be commited. Do you mean to 'git add [<file_0>...<file_n>]'?"
    exit 1
fi 

if [[ ! -f "${spec_file}" ]]
then 
    echo "ERROR: ${spec_file} does not exist"
    exit 1
fi

git diff --staged | aipy --prompt "${prompt}" -f "${spec_file}" --no-preserve | git commit -F -

