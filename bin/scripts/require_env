set -euo pipefail

usage () {
	cat << 'EOF'
require_env - Assert required environment variables exist

USAGE:
	require_env [OPTIONS] VAR1 [VAR2 ...]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--quiet         No output, just exit code

EXAMPLES:
	require_env HOME
	require_env HOME USER PATH
	require_env --quiet API_KEY || echo "API_KEY not set"

DESCRIPTION:
	Exit 0 if ALL specified variables are set and non-empty.
	Exit 1 if ANY variable is missing or empty.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

quiet=false
vars=()

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--quiet)
			quiet=true
			shift
			;;
		*)
			vars+=("$1")
			shift
			;;
	esac
done

if [[ ${#vars[@]} -eq 0 ]]; then
	echo "require_env: at least one variable required" >&2
	exit 1
fi

all_set=true
for var in "${vars[@]}"; do
	if [[ -z "${!var:-}" ]]; then
		all_set=false
		if [[ "$quiet" != "true" ]]; then
			echo "require_env: missing or empty: $var" >&2
		fi
	fi
done

if [[ "$all_set" == "true" ]]; then
	exit 0
else
	exit 1
fi
