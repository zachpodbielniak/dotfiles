set -euo pipefail 

if [[ $# -eq 0 ]]
then 
    echo "* ($(today))"
elif [[ $# -eq 1 ]]
then
    count="${1}"
    while [[ $count -gt 0 ]]
    do 
        printf '*'
        count=$(( count-1 ))
    done
    echo " ($(today))"
elif [[ $# -gt 1 ]]
then
    count="${1}"
    while [[ $count -gt 0 ]]
    do 
        printf '*'
        count=$(( count-1 ))
    done
    shift
    echo " ${@} ($(today))"
fi

