set -euo pipefail

usage () {
	cat << 'EOF'
yaml_to_json - Convert YAML to JSON format

USAGE:
yaml_to_json [OPTIONS]

OPTIONS:
-h, --help        Show this help message
--license         Show license information
--compact         Output single-line JSON (no pretty-printing)
--indent N        Indentation level for pretty-printing (default: 2)

EXAMPLES:
cat config.yaml | yaml_to_json

echo "a: 1" | yaml_to_json
# Output:
# {
#   "a": 1
# }

echo "a: 1" | yaml_to_json --compact
# Output: {"a":1}

EOF
}

compact=0
indent=2

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--compact)
			compact=1
			shift
			;;
		--indent)
			shift
			indent="${1:-2}"
			shift
			;;
		*)
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
			;;
	esac
done

# Convert YAML to JSON using yq
if [[ $compact -eq 1 ]]; then
	# Compact single-line JSON output (no indentation)
	yq -o json -I 0 '.'
else
	# Pretty-printed JSON with specified indentation
	yq -o json --indent "$indent" '.'
fi
