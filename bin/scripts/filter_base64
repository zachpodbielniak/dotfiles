set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Encode or decode base64

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Encodes or decodes base64 content. By default, attempts to auto-detect
    whether input is base64 and decode it, otherwise encodes.

OPTIONS:
    -h, --help      Show this help message and exit
    -e, --encode    Force encode mode
    -d, --decode    Force decode mode
    --license       Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Encode text to base64
    echo "Hello World" | ${SCRIPT_NAME} -e

    # Decode base64
    echo "SGVsbG8gV29ybGQK" | ${SCRIPT_NAME} -d

    # Auto-detect (will decode if valid base64)
    echo "SGVsbG8gV29ybGQK" | ${SCRIPT_NAME}

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

is_base64 () {
    local input="${1}"
    # Check if input looks like base64 (only valid base64 chars, possibly with newlines)
    if echo "${input}" | tr -d '\n' | grep -qE '^[A-Za-z0-9+/]*={0,2}$'; then
        # Try to decode and check if it succeeds
        if echo "${input}" | base64 -d &>/dev/null; then
            return 0
        fi
    fi
    return 1
}

main () {
    local mode="auto"
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -e|--encode)
                mode="encode"
                ;;
            -d|--decode)
                mode="decode"
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local content
    if [[ -n "${file_path}" ]]; then
        content=$(cat "${file_path}")
    else
        content=$(cat)
    fi

    if [[ "${mode}" == "auto" ]]; then
        if is_base64 "${content}"; then
            mode="decode"
        else
            mode="encode"
        fi
    fi

    if [[ "${mode}" == "encode" ]]; then
        echo "${content}" | base64
    else
        echo "${content}" | base64 -d
    fi
}

main "$@"
