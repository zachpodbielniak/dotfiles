#!/bin/bash

set -euo pipefail

usage() {
	cat << 'EOF'
range - Generate sequence of numbers

USAGE: range [OPTIONS] START [END] [STEP]

OPTIONS:
-h, --help      Show help
--license       License

EXAMPLES:
range 5
# Output: 1..5

range 2 5
# Output: 2..5

range 0 10 2
# Output: 0,2,4,6,8,10
EOF
}

[[ "${1:-}" == "-h" || "${1:-}" == "--help" ]] && { usage; exit 0; }
[[ "${1:-}" == "--license" ]] && { echo "AGPLv3"; exit 0; }

start=1
end="${1:-10}"
step=1

# Parse arguments: [start] end [step]
if [[ $# -gt 1 ]]; then
	start="$1"
	end="$2"
	[[ $# -gt 2 ]] && step="$3"
fi

# Generate range
seq "$start" "$step" "$end"
