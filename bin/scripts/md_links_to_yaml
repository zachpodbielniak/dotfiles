#!/bin/bash 
set -euo pipefail

if [[ $# -lt 1 ]]
then 
    echo "Usage: $(basename $0) <key> < <file>"
    exit 1
fi

KEY="${1}"
GROUP=""
IN_FRONTMATTER=false

echo "---"
echo "${KEY}: "

while read -r line 
do 
    # Handle YAML frontmatter
    if [[ "${line}" =~ ^--- ]]; then
        IN_FRONTMATTER=$([ "${IN_FRONTMATTER}" = "false" ] && echo "true" || echo "false")
        continue
    fi
    
    # Skip lines inside frontmatter
    if [[ "${IN_FRONTMATTER}" == "true" ]]; then
        continue
    fi
    
    # Skip empty lines and main title
    if [[ "${line}" =~ ^[[:space:]]*$ ]] || [[ "${line}" =~ ^#[[:space:]] ]]; then
        continue
    fi
    
    # Look for section headings (## group)
    if [[ "${line}" =~ ^##[[:space:]]+ ]]; then
        GROUP="$(sed 's/^##[[:space:]]*//' <<< "${line}" | xargs)"
        continue
    fi

    # Look for markdown links: - [title](url)  
    if [[ "${line}" =~ ^[[:space:]]*-[[:space:]]*\[ ]]; then
        # Extract title (between [ and ])
        title=$(awk -F'[\\[\\]]' '{print $2}' <<< "${line}")
        # Extract URL (between ( and ))
        url=$(awk -F'[()]' '{print $2}' <<< "${line}")
        printf "  - name: %s\n    group: %s\n    url: \"%s\"\n" "${title}" "${GROUP}" "${url}"
    fi
done