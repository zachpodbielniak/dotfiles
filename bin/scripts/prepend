set -euo pipefail

usage () {
	cat << 'EOF'
prepend - Prepend strings to each line of stdin

USAGE:
	command | prepend [OPTIONS] <string> [string...]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	-d, --delimiter     Delimiter between prepended strings (default: "")
	-e                  Interpret backslash escapes in strings and delimiter
	-w, --whole         Operate on entire stdin as a unit instead of per-line

DESCRIPTION:
	Reads from stdin and prepends the given strings to each line.
	Multiple strings are joined with the delimiter and prepended together.

	In whole mode (-w), the prefix is printed once before all of stdin,
	separated by a newline. This is useful for wrapping content in pipes.

EXAMPLES:
	echo "world" | prepend "hello "
	  => hello world

	ls | prepend "> "
	  => > file1.txt
	  => > file2.txt

	echo "bar" | prepend -d "/" "foo" "baz"
	  => foo/baz/bar

	cat urls.txt | prepend "https://"
	  => https://example.com

	echo "world" | prepend -e "hello\t"
	  => hello	world

	echo "test" | prepend -w '```' | append -w '```'
	  => ```
	  => test
	  => ```

EOF
}

strings=()
delimiter=""
interpret_escapes=false
whole_mode=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		-e) interpret_escapes=true; shift ;;
		-w|--whole) whole_mode=true; shift ;;
		-d|--delimiter)
			delimiter="${2}"
			shift 2
			;;
		*)
			strings+=("${1}")
			shift
			;;
	esac
done

if [[ ${#strings[@]} -eq 0 ]]; then
	echo "Error: at least one string to prepend is required" >&2
	usage >&2
	exit 1
fi

# Interpret escapes if -e is set
# Uses printf -v to assign directly, avoiding $() newline stripping
_expand () {
	local -n _ref="${1}"
	if [[ "${interpret_escapes}" == true ]]; then
		printf -v _ref '%b' "${2}"
	else
		_ref="${2}"
	fi
}

_expand delimiter "${delimiter}"

# Build the prefix by joining all strings with the delimiter
_expand prefix "${strings[0]}"
for ((i = 1; i < ${#strings[@]}; i++)); do
	_expand _tmp "${strings[$i]}"
	prefix="${prefix}${delimiter}${_tmp}"
done
unset _tmp

# Output prefix then stdin
if [[ "${whole_mode}" == true ]]; then
	# Whole mode: print prefix once, then pass stdin through
	printf '%s\n' "${prefix}"
	cat
else
	# Per-line mode: prepend prefix to each line
	while IFS= read -r line; do
		printf '%s%s%s\n' "${prefix}" "${delimiter}" "${line}"
	done
fi
