set -euo pipefail

usage () {
	cat << 'EOF'
confirm - Simple yes/no prompt

USAGE:
	confirm [OPTIONS] "PROMPT"

OPTIONS:
	-h, --help           Show this help message
	--license            Show license information
	--default-yes        Default to yes on Enter
	--default-no         Default to no on Enter (default)
	-y, --yes            Auto-confirm (no prompt)
	--timeout N          Timeout with default answer

EXAMPLES:
	confirm "Continue?" && echo "User said yes" || echo "User said no"
	confirm -y "This will auto-yes"
	confirm --default-yes "Continue?"

DESCRIPTION:
	Display a yes/no prompt and exit 0 for yes, 1 for no.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

default="no"
auto_yes=false
timeout=0
prompt=""

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--default-yes)
			default="yes"
			shift
			;;
		--default-no)
			default="no"
			shift
			;;
		-y|--yes)
			auto_yes=true
			shift
			;;
		--timeout)
			timeout="$2"
			shift 2
			;;
		*)
			prompt="$1"
			shift
			;;
	esac
done

if [[ -z "$prompt" ]]; then
	echo "confirm: prompt required" >&2
	exit 1
fi

# Auto-yes mode
if [[ "$auto_yes" == "true" ]]; then
	exit 0
fi

# Determine default text
default_text=""
if [[ "$default" == "yes" ]]; then
	default_text=" [Y/n]"
else
	default_text=" [y/N]"
fi

# Show prompt
if [[ $timeout -gt 0 ]]; then
	read -p "$prompt$default_text " -t "$timeout" response || response="$default"
else
	read -p "$prompt$default_text " response
fi

# Check response
response="${response,,}"
if [[ -z "$response" ]]; then
	# Use default
	[[ "$default" == "yes" ]] && exit 0 || exit 1
else
	case "$response" in
		y|yes)
			exit 0
			;;
		n|no)
			exit 1
			;;
		*)
			echo "confirm: please answer y or n" >&2
			exit 1
			;;
	esac
fi
