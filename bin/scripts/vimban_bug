# vimban_bug - Quick bug creation with sensible defaults
#
# Usage:
#   vimban_bug "Bug title"
#   vimban_bug "Bug title" -p critical
#   vimban_bug "Bug title" --due +1d
#   vimban_bug --work "Work bug"
#
# Defaults:
#   assignee: zach_podbielniak
#   reporter: zach_podbielniak
#   due_date: +7d (1 week from now)
#   priority: high (bugs are typically more urgent)

set -euo pipefail

show_help () {
    cat <<EOF
vimban_bug - Quick bug creation with sensible defaults

Usage:
    vimban_bug [options] "Bug title"
    vimban_bug "Bug title" [vimban options]

Defaults:
    assignee: zach_podbielniak
    reporter: zach_podbielniak
    due_date: +7d (1 week from now)
    priority: high (bugs are typically more urgent)

Options:
    -h, --help          Show this help message
    -p, --priority PRI  Override priority (critical|high|medium|low)
    --due DATE          Override due date (+Nd, YYYY-MM-DD, etc.)
    -a, --assignee REF  Override assignee
    -r, --reporter REF  Override reporter
    --work              Create in work scope
    --personal          Create in personal scope

Any additional options are passed through to vimban create bug.

Examples:
    vimban_bug "Login fails with special characters"
    vimban_bug "Data corruption on save" -p critical --due +1d
    vimban_bug --work "API returns 500 on edge case"
    vimban_bug --personal "Script crashes on empty input" -p medium
EOF
}

# Default values
assignee="zach_podbielniak"
reporter="zach_podbielniak"
due_date="+7d"
priority="high"
scope_arg=""

# Passthrough args (title, other options)
passthrough_args=()

# Parse arguments
while [[ $# -gt 0 ]]
do
    case "${1}" in
        -h|--help)
            show_help
            exit 0
            ;;
        -p|--priority)
            priority="${2}"
            shift 2
            ;;
        --due)
            due_date="${2}"
            shift 2
            ;;
        -a|--assignee)
            assignee="${2}"
            shift 2
            ;;
        -r|--reporter)
            reporter="${2}"
            shift 2
            ;;
        --work)
            scope_arg="--work"
            shift
            ;;
        --personal)
            scope_arg="--personal"
            shift
            ;;
        *)
            passthrough_args+=("${1}")
            shift
            ;;
    esac
done

# Check if we have at least a title in passthrough args
if [[ ${#passthrough_args[@]} -lt 1 ]]
then
    echo "Error: Bug title required" >&2
    echo "Usage: vimban_bug [options] \"Bug title\"" >&2
    exit 1
fi

# Build and execute the command
# shellcheck disable=SC2086
exec vimban ${scope_arg} create bug \
    -a "${assignee}" \
    -r "${reporter}" \
    --due "${due_date}" \
    -p "${priority}" \
    "${passthrough_args[@]}"
