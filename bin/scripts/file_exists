set -euo pipefail

usage () {
	cat << 'EOF'
file_exists - Check if file/directory exists

USAGE:
file_exists [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information
-f              Check files only
-d              Check directories only

EXAMPLES:
echo "/usr/bin/ls" | file_exists
# Output: true (or false)

echo -e "/etc/passwd\n/nonexistent" | file_exists
# Output: true
# false

EOF
}

check_type=""

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		-f) check_type="f"; shift ;;
		-d) check_type="d"; shift ;;
		*)
			if [[ -n "${1:-}" ]]; then
				echo "Unknown option: ${1}" >&2
				usage >&2
				exit 1
			fi
			shift
			;;
	esac
done

# Check if paths exist
while IFS= read -r path; do
	if [[ -z "${check_type}" ]]; then
		# Check any type
		[[ -e "${path}" ]] && echo "true" || echo "false"
	elif [[ "${check_type}" == "f" ]]; then
		# Check files only
		[[ -f "${path}" ]] && echo "true" || echo "false"
	elif [[ "${check_type}" == "d" ]]; then
		# Check directories only
		[[ -d "${path}" ]] && echo "true" || echo "false"
	fi
done
