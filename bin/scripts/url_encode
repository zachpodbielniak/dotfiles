#!/bin/bash
set -euo pipefail
usage() { cat << 'USAGE'
url_encode - URL-encode input
USAGE: url_encode [OPTIONS]
OPTIONS:
-h, --help      Show this help message
--license       Show license information
EXAMPLES:
echo "hello world" | url_encode
# Output: hello%20world
USAGE
exit 0; }
[[ "${1:-}" == "-h" || "${1:-}" == "--help" ]] && usage
[[ "${1:-}" == "--license" ]] && { echo "AGPLv3"; exit 0; }
jq -sRr @uri
