set -euo pipefail

usage () {
	cat << 'EOF'
truncate - Truncate text with ellipsis

USAGE:
	truncate [OPTIONS] <length>

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--end STR       Custom ellipsis (default: …)
	--word          Break at word boundary

EXAMPLES:
	echo "very long text here" | truncate 10
	echo "very long text here" | truncate 10 --end "..."
	echo "very long text here" | truncate 10 --word

EOF
}

length=""
end="…"
word_boundary=false

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help) usage; exit 0 ;;
		--license) echo "AGPLv3"; exit 0 ;;
		--word) word_boundary=true; shift ;;
		--end) end="${2}"; shift 2 ;;
		*)
			if [[ -z "$length" ]]; then
				length="${1}"
				shift
			else
				echo "Error: unexpected argument '$1'" >&2
				exit 1
			fi
			;;
	esac
done

if [[ -z "$length" ]]; then
	echo "Error: length argument required" >&2
	exit 1
fi

while IFS= read -r line; do
	if [[ ${#line} -le $length ]]; then
		echo "$line"
		continue
	fi

	end_len=${#end}
	max_content_len=$((length - end_len))

	if [[ $max_content_len -le 0 ]]; then
		# If end is longer than length, just truncate
		echo "${line:0:$length}"
	elif [[ "$word_boundary" == true ]]; then
		# Break at word boundary
		truncated="${line:0:$max_content_len}"
		# Remove everything after last space
		truncated="${truncated% *}"
		if [[ -z "$truncated" ]]; then
			# No space found, do character truncation
			echo "${line:0:$max_content_len}${end}"
		else
			echo "${truncated}${end}"
		fi
	else
		# Simple character truncation
		echo "${line:0:$max_content_len}${end}"
	fi
done
