import sys
import argparse

def usage():
	print("""normalize_numbers - Scale numbers to 0-1 range

USAGE:
	normalize_numbers [OPTIONS]

OPTIONS:
	-h, --help          Show this help message
	--license           Show license information
	-p, --precision N   Decimal precision (default: 4)
	--range MIN MAX     Scale to custom range instead of 0-1

EXAMPLES:
	echo -e "0\\n50\\n100" | normalize_numbers
	echo -e "10\\n50\\n100" | normalize_numbers --range 0 10
""")

def main() -> int:
	parser = argparse.ArgumentParser(add_help=False)
	parser.add_argument('-p', '--precision', type=int, default=4)
	parser.add_argument('--range', nargs=2, type=float)
	parser.add_argument('-h', '--help', action='store_true')
	parser.add_argument('--license', action='store_true')

	args = parser.parse_args()

	if args.help:
		usage()
		return 0

	if args.license:
		print("AGPLv3")
		return 0

	# Read numbers and store
	numbers = []
	for line in sys.stdin:
		line = line.strip()
		if line:
			try:
				numbers.append(float(line))
			except ValueError:
				print(f"normalize_numbers: invalid number: {line}", file=sys.stderr)
				return 1

	if not numbers:
		return 0

	# Get min and max
	min_val = min(numbers)
	max_val = max(numbers)

	# Handle edge case where all values are the same
	if min_val == max_val:
		for num in numbers:
			print(f"{num:.{args.precision}f}")
		return 0

	# Determine range
	if args.range:
		range_min, range_max = args.range
	else:
		range_min, range_max = 0, 1

	# Normalize and output
	for num in numbers:
		# Min-max normalization to [0,1], then scale to desired range
		normalized = (num - min_val) / (max_val - min_val)
		scaled = range_min + normalized * (range_max - range_min)
		print(f"{scaled:.{args.precision}f}")

	return 0

if __name__ == "__main__":
	sys.exit(main())
