set -euo pipefail

SCRIPT_NAME="$(basename "${0}")"

usage () {
    cat <<EOF
${SCRIPT_NAME} - Count todo items (- [ ] vs - [x])

USAGE:
    ${SCRIPT_NAME} [OPTIONS] [FILE]

DESCRIPTION:
    Counts markdown todo items in the input and provides statistics.
    Recognizes both "- [ ]" (incomplete) and "- [x]" (complete) formats.

OPTIONS:
    -h, --help          Show this help message and exit
    -s, --summary-only  Only show summary, not original content
    --license           Show the license (AGPLv3) and exit

ARGUMENTS:
    FILE            Optional file path to read content from.
                    If not provided, reads from stdin.

EXAMPLES:
    # Count todos in a file
    ${SCRIPT_NAME} TODO.md

    # Use in neovim
    :'<,'>!${SCRIPT_NAME}

EOF
}

main () {
    local summary_only=0
    local file_path=""

    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -h|--help)
                usage
                exit 0
                ;;
            -s|--summary-only)
                summary_only=1
                ;;
            --license)
                echo "AGPLv3 - See source file for full license."
                exit 0
                ;;
            -*)
                echo "Error: Unknown option '${1}'" >&2
                exit 1
                ;;
            *)
                file_path="${1}"
                ;;
        esac
        shift
    done

    local content
    if [[ -n "${file_path}" ]]; then
        content=$(cat "${file_path}")
    else
        content=$(cat)
    fi

    local incomplete complete total percent
    incomplete=$(echo "${content}" | grep -cE '^\s*-\s*\[ \]' || echo 0)
    complete=$(echo "${content}" | grep -ciE '^\s*-\s*\[x\]' || echo 0)
    total=$((incomplete + complete))
    
    if [[ ${total} -gt 0 ]]; then
        percent=$(( (complete * 100) / total ))
    else
        percent=0
    fi

    if [[ ${summary_only} -eq 0 ]]; then
        echo "${content}"
        echo ""
    fi

    echo "## Todo Statistics"
    echo "| Status | Count |"
    echo "|--------|-------|"
    echo "| ✅ Complete | ${complete} |"
    echo "| ⬜ Incomplete | ${incomplete} |"
    echo "| **Total** | **${total}** |"
    echo ""
    echo "**Progress: ${percent}%**"
}

main "$@"
