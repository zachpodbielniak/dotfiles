set -euo pipefail

usage () {
	cat << 'EOF'
trim_string - Remove leading and trailing whitespace

USAGE:
trim_string [OPTIONS]

OPTIONS:
-h, --help      Show this help message
--license       Show license information

EXAMPLES:
echo "  hello  " | trim_string
# Output: hello

echo -e "  a  \n  b  " | trim_string
# Output:
# a
# b

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
	*)
		if [[ -n "${1:-}" ]]; then
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
		fi
		;;
esac

# Trim leading and trailing whitespace from each line
sed 's/^[[:space:]]*//;s/[[:space:]]*$//'
