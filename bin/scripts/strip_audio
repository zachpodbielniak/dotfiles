#!/bin/bash 
set -euo pipefail

input=""
output=""

if [[ $# -lt 1 ]]
then 
    echo "use this tool correctly:"
    echo "  ${0} <input_file> [output_file]"
fi

input="${1}"

if [[ $# -ge 2 ]]
then 
    output="${2}"
else 
    output="${input}.ogg"
fi

ffmpeg \
    -y \
    -i "${input}" \
    -vn \
    -acodec libvorbis \
    -q:a 2 \
    "${output}"

