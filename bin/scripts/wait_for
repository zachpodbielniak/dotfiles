set -euo pipefail

usage () {
	cat << 'EOF'
wait_for - Wait for service/port/URL to become available

USAGE:
	wait_for [OPTIONS] HOST:PORT | URL

OPTIONS:
	-h, --help        Show this help message
	--license         Show license information
	-t, --timeout N   Timeout in seconds (default: 30)
	-i, --interval N  Check interval in seconds (default: 1)
	--quiet           No output, just exit code

EXAMPLES:
	wait_for localhost:5432
	wait_for https://example.com --timeout 10
	wait_for localhost:8080 --interval 2

DESCRIPTION:
	Wait for a service/port/URL to become available.
	Supports TCP port checking and HTTP URL checking.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

timeout=30
interval=1
quiet=false
target="${1}"

while [[ $# -gt 1 ]]; do
	case "$2" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		-t|--timeout)
			timeout="$3"
			shift 2
			;;
		-i|--interval)
			interval="$3"
			shift 2
			;;
		--quiet)
			quiet=true
			shift
			;;
		*)
			shift
			;;
	esac
done

# Determine target type
if [[ "$target" =~ ^https?:// ]]; then
	# HTTP URL
	start=$(date +%s)
	while true; do
		if curl -s -o /dev/null -w '%{http_code}' --max-time 5 -I "$target" 2>/dev/null | grep -q '^[23]'; then
			[[ "$quiet" != "true" ]] && echo "Service available: $target"
			exit 0
		fi
		elapsed=$(($(date +%s) - start))
		if [[ $elapsed -ge $timeout ]]; then
			[[ "$quiet" != "true" ]] && echo "Timeout waiting for $target" >&2
			exit 1
		fi
		sleep "$interval"
	done
else
	# TCP port (hostname:port)
	host="${target%:*}"
	port="${target##*:}"
	start=$(date +%s)
	while true; do
		if nc -z -w 2 "$host" "$port" &>/dev/null; then
			[[ "$quiet" != "true" ]] && echo "Service available: $host:$port"
			exit 0
		fi
		elapsed=$(($(date +%s) - start))
		if [[ $elapsed -ge $timeout ]]; then
			[[ "$quiet" != "true" ]] && echo "Timeout waiting for $host:$port" >&2
			exit 1
		fi
		sleep "$interval"
	done
fi
