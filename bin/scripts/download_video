SLEEP_INTERVAL=${SLEEP_INTERVAL:-30}
SLEEP_REQUESTS=${SLEEP_REQUESTS:-5}
DOWNLOAD_FORMAT=${DOWNLOAD_FORMAT:-bestaudio+bestvideo}
MERGE_FORMAT=${MERGE_FORMAT:-mkv}
AUDIO_FORMAT=${AUDIO_FORMAT:-vorbis}

yt-dlp \
    -ci \
    --merge-output-format ${MERGE_FORMAT} \
    --audio-format ${AUDIO_FORMAT} \
    -f ${DOWNLOAD_FORMAT} \
    --cookies ~/.cookies/cookies.Media.txt \
    --sleep-interval ${SLEEP_INTERVAL} \
    --sleep-requests ${SLEEP_REQUESTS} \
    "${@}"

