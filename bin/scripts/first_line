#!/bin/bash

set -euo pipefail

usage() {
	cat << 'EOF'
first_line - Get first line

USAGE: first_line [OPTIONS] [COUNT]

OPTIONS:
-h, --help      Show help
--license       License

EXAMPLES:
echo -e "a\nb\nc" | first_line
# Output: a

echo -e "a\nb\nc" | first_line 2
# Output: a\nb
EOF
}

[[ "${1:-}" == "-h" || "${1:-}" == "--help" ]] && { usage; exit 0; }
[[ "${1:-}" == "--license" ]] && { echo "AGPLv3"; exit 0; }

count="${1:-1}"
head -n "$count"
