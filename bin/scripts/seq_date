set -euo pipefail

usage () {
	cat << 'EOF'
seq_date - Generate sequence of dates

USAGE:
	seq_date START END [OPTIONS]

OPTIONS:
	-h, --help        Show this help message
	--license         Show license information
	--format FMT      Date format (default: %Y-%m-%d)
	--step N          Step size (default: 1)
	--unit UNIT       Step unit: day, week, month (default: day)
	--reverse         Generate in reverse order

EXAMPLES:
	seq_date 2024-01-01 2024-01-05
	seq_date 2024-01-01 2024-01-22 --unit week
	seq_date 2024-01-01 2024-01-31 --format "%Y/%m/%d"

DESCRIPTION:
	Generate a sequence of dates from START to END.

EOF
}

if [[ $# -lt 2 ]]; then
	usage >&2
	exit 1
fi

start_date="$1"
end_date="$2"
shift 2

format="%Y-%m-%d"
step=1
unit="day"
reverse=false

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--format)
			format="$2"
			shift 2
			;;
		--step)
			step="$2"
			shift 2
			;;
		--unit)
			unit="$2"
			shift 2
			;;
		--reverse)
			reverse=true
			shift
			;;
		*)
			echo "seq_date: unknown option: $1" >&2
			exit 1
			;;
	esac
done

# Use date command to generate sequence
current=$(date -d "$start_date" "+%s" 2>/dev/null || date -j -f "%Y-%m-%d" "$start_date" "+%s")
end=$(date -d "$end_date" "+%s" 2>/dev/null || date -j -f "%Y-%m-%d" "$end_date" "+%s")

# Calculate step in seconds
case "$unit" in
	day)
		step_seconds=$((step * 86400))
		;;
	week)
		step_seconds=$((step * 604800))
		;;
	month)
		# Approximate months as 30.44 days
		step_seconds=$((step * 2629440))
		;;
	*)
		echo "seq_date: unknown unit: $unit" >&2
		exit 1
		;;
esac

# Generate dates
dates=()
if [[ "$reverse" == "false" ]]; then
	while [[ $current -le $end ]]; do
		dates+=("$(date -d @$current "+$format" 2>/dev/null || date -j -f "%s" "$current" "+$format")")
		current=$((current + step_seconds))
	done
else
	# For reverse, collect all dates first then reverse
	while [[ $current -le $end ]]; do
		dates+=("$(date -d @$current "+$format" 2>/dev/null || date -j -f "%s" "$current" "+$format")")
		current=$((current + step_seconds))
	done
	# Reverse array
	for ((i=${#dates[@]}-1; i>=0; i--)); do
		echo "${dates[i]}"
	done
	exit 0
fi

# Output dates
for date in "${dates[@]}"; do
	echo "$date"
done
