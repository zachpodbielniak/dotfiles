MODEL=${MODEL:-gpt-4o}

if [[ ${#} -ne 1 ]]
then
    echo -e "Usage: $(basename ${0}) <file>"
    exit 1 
fi

story="${1}"

openpy \
    --model ${MODEL} \
    --file ${story} \
    <<< "generate a prompt that will be used to create an image from the following attached story:" \
    | openpy \
        --image-gen \
        --hd \
        --size 1792x1024

