PROJECT_DIR="${HOME}/Source/Projects"
PUBLIC_DIR="${HOME}/Source/Public"

declare -a REPO_DIRS=(
    # Projects im contributing to
    "${PROJECT_DIR}"
    # Public repos I like to have on hand 
    # to reference
    "${PUBLIC_DIR}"
)


declare -a PROJECT_REPOS=(
    # 
    "git@gitlab.com:immutablue/immutablue.git"
    "git@gitlab.com:immutablue/immutablue-asahi.git"
    "git@gitlab.com:immutablue/immutablue-custom.git"
    "git@gitlab.com:immutablue/immutablue-cyan.git"
    "git@gitlab.com:immutablue/immutablue-nucleus.git"
    "git@gitlab.com:immutablue/immutablue-build.git"
    "git@gitlab.com:immutablue/kuberblue.git"
    "git@gitlab.com:immutablue/trueblue.git"
    "git@gitlab.com:immutablue/hyacinth-macaw.git"
    "git@gitlab.com:immutablue/hawk-blueah.git"
    "git@gitlab.com:noahsibai/blue-tuxonaut.git"
    "git@gitlab.com:noahsibai/cigar.git"
    "git@gitlab.com:noahsibai/blue2go.git"

    "git@gitlab.com:zachpodbielniak/BackupScripts.git"
    "git@gitlab.com:zachpodbielniak/MediaTranscodePipelineNG.git"
    "git@gitlab.com:zachpodbielniak/MediaTranscodePipeline.git"
    "git@gitlab.com:zachpodbielniak/NautilusOpenWithCode.git"
    "git@gitlab.com:zachpodbielniak/PodMQ.git"
    "git@gitlab.com:zachpodbielniak/ProjectGateway.git"
    "git@gitlab.com:zachpodbielniak/Useful.git"
    "git@gitlab.com:zachpodbielniak/Workstation.git"
)

declare -a PUBLIC_REPOS=(
        "https://github.com/ublue-os/bazzite"
        "https://github.com/ublue-os/bluefin"
        "https://github.com/ublue-os/main"
        "https://github.com/ublue-os/config"
        "https://github.com/Dynatrace/dynatrace-operator"
        "git://gcc.gnu.org/git/gcc.git"
        "https://gitlab.gnome.org/GNOME/glib"
        "https://sourceware.org/git/glibc.git"
        "https://github.com/torvalds/linux"
        "https://github.com/hackerschoice/zapper"
)


git_update() {
    for dir in ./*
    do
        if [[ -d "${dir}" ]]
        then
            cd "${dir}" || exit 1
            if [[ -d ".git" ]]
            then
                git pull || true 
                git fetch --all || true
            fi
            cd ..
        fi
    done
}


mkdir -p "${PROJECT_DIR}"
mkdir -p "${PUBLIC_DIR}"

cd "${PROJECT_DIR}" || exit 1
git_update
for project in ${PROJECT_REPOS[@]}
do
    if [[ ! -d "${project}" ]]
    then
       git clone --recurse-submodules "${project}"
    fi
done



cd "${PUBLIC_DIR}" || exit 1
git_update
for project in ${PUBLIC_REPOS[@]}
do
    if [[ ! -d "${project}" ]]
    then
       git clone --recurse-submodules "${project}"
    fi
done


