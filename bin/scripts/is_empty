set -euo pipefail

usage () {
	cat << 'EOF'
is_empty - Check if stdin is empty

USAGE:
	is_empty [OPTIONS]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information

EXAMPLES:
	echo -n "" | is_empty && echo "Empty"
	cat file.txt | is_empty || echo "Not empty"

DESCRIPTION:
	Exit code 0 if stdin is empty (contains no bytes)
	Exit code 1 if stdin has any content (including whitespace)

EOF
}

case "${1:-}" in
	-h|--help) usage; exit 0 ;;
	--license) echo "AGPLv3"; exit 0 ;;
esac

if [[ $# -gt 0 ]]; then
	echo "is_empty: unknown option: $1" >&2
	usage >&2
	exit 1
fi

# Check if stdin is empty
# We use 'cat' and check if the result is empty
content=$(cat 2>/dev/null)
if [[ -z "$content" ]]; then
	# stdin is empty
	exit 0
else
	# stdin has content
	exit 1
fi
