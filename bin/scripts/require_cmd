set -euo pipefail

usage () {
	cat << 'EOF'
require_cmd - Assert required commands exist

USAGE:
	require_cmd [OPTIONS] CMD1 [CMD2 ...]

OPTIONS:
	-h, --help      Show this help message
	--license       Show license information
	--quiet         No output, just exit code

EXAMPLES:
	require_cmd bash
	require_cmd bash cat ls
	require_cmd --quiet python3 || echo "python3 not found"

DESCRIPTION:
	Exit 0 if ALL specified commands are available.
	Exit 1 if ANY command is missing.

EOF
}

if [[ $# -lt 1 ]]; then
	usage >&2
	exit 1
fi

quiet=false
cmds=()

while [[ $# -gt 0 ]]; do
	case "$1" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--quiet)
			quiet=true
			shift
			;;
		*)
			cmds+=("$1")
			shift
			;;
	esac
done

if [[ ${#cmds[@]} -eq 0 ]]; then
	echo "require_cmd: at least one command required" >&2
	exit 1
fi

all_found=true
for cmd in "${cmds[@]}"; do
	if ! command -v "$cmd" &>/dev/null; then
		all_found=false
		if [[ "$quiet" != "true" ]]; then
			echo "require_cmd: command not found: $cmd" >&2
		fi
	fi
done

if [[ "$all_found" == "true" ]]; then
	exit 0
else
	exit 1
fi
