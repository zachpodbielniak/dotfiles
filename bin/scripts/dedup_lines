set -euo pipefail

usage () {
	cat << 'EOF'
dedup_lines - Remove duplicate lines while preserving order

USAGE:
dedup_lines [OPTIONS]

OPTIONS:
-h, --help        Show this help message
--license         Show license information
--count           Prefix lines with occurrence count
--ignore-case     Case-insensitive deduplication

EXAMPLES:
echo -e "a\nb\na\nc" | dedup_lines
# Output:
# a
# b
# c

echo -e "a\nA\nb" | dedup_lines --ignore-case
# Output:
# a
# b

echo -e "a\nb\na\nc" | dedup_lines --count
# Output:
# 2 a
# 1 b
# 1 c

EOF
}

count_flag=0
ignore_case=0

while [[ $# -gt 0 ]]; do
	case "${1}" in
		-h|--help)
			usage
			exit 0
			;;
		--license)
			echo "AGPLv3"
			exit 0
			;;
		--count)
			count_flag=1
			shift
			;;
		--ignore-case)
			ignore_case=1
			shift
			;;
		*)
			echo "Unknown option: ${1}" >&2
			usage >&2
			exit 1
			;;
	esac
done

# Use awk to deduplicate lines
# Two-pass approach: first pass counts occurrences, second pass outputs with counts
if [[ $ignore_case -eq 1 ]]; then
	# Case-insensitive deduplication
	if [[ $count_flag -eq 1 ]]; then
		# Two-pass: count then output with counts
		awk '{
			key = tolower($0)
			counts[key]++
			if (!seen[key]++) {
				lines[key] = $0
				order[++n] = key
			}
		}
		END {
			for (i = 1; i <= n; i++) {
				key = order[i]
				print counts[key] " " lines[key]
			}
		}'
	else
		# Single-pass case-insensitive dedup
		awk '{
			key = tolower($0)
			if (!seen[key]++) print $0
		}'
	fi
else
	# Case-sensitive deduplication
	if [[ $count_flag -eq 1 ]]; then
		# Two-pass: count then output with counts
		awk '{
			counts[$0]++
			if (!seen[$0]++) {
				order[++n] = $0
			}
		}
		END {
			for (i = 1; i <= n; i++) {
				line = order[i]
				print counts[line] " " line
			}
		}'
	else
		# Single-pass case-sensitive dedup
		awk '{ if (!seen[$0]++) print $0 }'
	fi
fi
