[Service]
Type=simple
RemainAfterExit=true
StandardOutput=journal
ExecStartPre=/usr/bin/distrobox-rm -f ephem-alpine
ExecStart=/usr/bin/bash -c 'distrobox-create --yes -i quay.io/toolbx-images/alpine-toolbox:latest --additional-flags "-v /var/home/linuxbrew:/var/home/linuxbrew -v /home/linuxbrew:/home/linuxbrew" --name ephem-alpine && distrobox-enter ephem-alpine -- echo started' 
ExecStop=/usr/bin/distrobox-rm -f ephem-alpine

[Install]
WantedBy=default.target


