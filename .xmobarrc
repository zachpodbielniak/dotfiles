Config { font = "xft:Hack Nerd Font Mono:pixelsize=12:antialias=true:hinting=true"
       , additionalFonts = []
       , borderColor = "#313244"
       , border = TopB
       , bgColor = "#1e1e2e"
       , fgColor = "#cdd6f4"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Weather "KTOL" ["-t","<tempF>F"] 36000
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","#a6e3a1","--high","#f38ba8"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Battery ["--template", "Batt: <acstatus> <left>%"
                                    , "--Low", "10", "--High", "85"
                                    , "--low", "#f38ba8", "--normal", "#f9e2af"
                                    , "--high", "#a6e3a1"
                                    , "--"
                                    , "-o", "<left>% (<timeleft>)"
                                    , "-O", "<fc=#f9e2af>Charging</fc>"
                                    , "-i", "<fc=#a6e3a1>Charged</fc>"
                                    ] 50
                    , Run Date "%b %_d %-l:%M %p" "date" 10
                    , Run Com "bash" ["-c"
                                    , "mpc -f '%artist% - %title%' current 2>/dev/null || echo 'No music'"] "mpd" 10
                    , Run XMonadLog
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "   Óù∑ %XMonadLog% | %mpd% }{ %cpu% | %memory% | %battery% | %KTOL% | <fc=#cdd6f4>%date%</fc>   |                                            "
       }

